<Rezept>
   <meta>
       <NaehrwertProPerson>267 kcal</NaehrwertProPerson>
       <Fett>20 g  </Fett>
       <Kohlenhydrate>12 g  </Kohlenhydrate>
       <Eiweiss>8 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Haselnusscreme>
          <quant>100 g</quant>
          <zutat>Haselnuesse (z.B. Nocciola Piemonte IGP)</zutat>
          <quant>2 EL</quant>
          <zutat>Zucker</zutat>
          <quant>2 Prisen</quant>
          <zutat>Salz</zutat>
      </Haselnusscreme>
      <Cappuccino>
          <quant>4 dl</quant>
          <zutat>Milch</zutat>
          <quant>4 </quant>
          <zutat>starke Espressi</zutat>
          <quant>1 EL</quant>
