<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>150 kcal</NaehrwertProPerson>
       <Fett>5 g   </Fett>
       <Kohlenhydrate>22 g  </Kohlenhydrate>
       <Eiweiss>4 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Teig_     >
          <quant>250 g</quant>
          <zutat>Honig</zutat>
          <quant>3/4 dl</quant>
          <zutat>Milch</zutat>
          <quant>75 g</quant>
          <zutat>Zucker</zutat>
          <quant>1 </quant>
          <zutat>frisches Ei</zutat>
          <quant>500 g</quant>
          <zutat>Ruchmehl</zutat>
          <quant>1/2 TL</quant>
          <zutat>Backpulver</zutat>
          <quant>1 Paeckli</quant>
          <zutat>Bourbon-Vanillezucker</zutat>
          <quant>1 EL</quant>
          <zutat>Lebkuchengewuerz</zutat>
      </Teig_     >
      <Mandelmasse_>
          <quant>120 g</quant>
          <zutat>gemahlene geschaelte Mandeln</zutat>
          <quant>2 EL</quant>
          <zutat>Zucker</zutat>
          <quant>4 1/2 EL</quant>
          <zutat>Honig</zutat>
      </Mandelmasse_>
      <Backen    >
          <quant>1 dl</quant>
          <zutat>Rahm</zutat>
      </Backen    >
      <Verzieren >
          <quant>100 g</quant>
          <zutat>dunkle Schokolade, grob gehackt</zutat>
          <quant>50 g</quant>
          <zutat>Mandelstifte</zutat>
          <quant>30 g</quant>
          <zutat>Schokoladenspaene, grob gehackt</zutat>
      </Verzieren >
   </einkaufliste>
   <rezept>
      <How_To    >
          <inhalt>Teig                          </inhalt>
      </How_To    >
      <Teig_     >
          <inhalt>Mandelmasse                   </inhalt>
      </Teig_     >
      <Mandelmasse_>
          <inhalt>Formen                        </inhalt>
      </Mandelmasse_>
      <Formen_   >
          <inhalt>Backen                        </inhalt>
      </Formen_   >
      <Backen    >
          <inhalt>Verzieren                     </inhalt>
      </Backen    >
      <Verzieren >
          <inhalt>Igelikoerper in die Schokolade tauchen, Mandelstifte oder Schokoladenspaene darueber streuen, mit Schokolade Augen und Nase zeichnen.</inhalt>
      </Verzieren >
   </rezept>
</Rezept>