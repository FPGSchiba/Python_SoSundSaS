       <Eiweiss>13 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Salat     >
          <quant>2 </quant>
          <zutat>Avocados, halbiert, in Lamellen</zutat>
          <quant>1/2 </quant>
          <zutat>Chinakohl, in Streifen</zutat>
          <quant>1 </quant>
          <zutat>rote Zwiebel, in Streifen</zutat>
          <quant>100 g</quant>
          <zutat>Rauchlachs (in Scheiben), zerzupft</zutat>
          <quant>200 g</quant>
          <zutat>Huettenkaese nature (nature)</zutat>
      </Salat     >
      <Salatsauce>
          <quant>1 EL</quant>
          <zutat>grobkoerniger Senf</zutat>
          <quant>3 EL</quant>
          <zutat>Zitronensaft</zutat>
          <quant>4 EL</quant>
