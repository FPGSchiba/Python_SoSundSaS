          <quant>1 EL</quant>
          <zutat>fluessiger Honig</zutat>
          <quant>1 EL</quant>
          <zutat>Kerbel, fein geschnitten</zutat>
          <quant> </quant>
          <zutat>Salz, Pfeffer, nach Bedarf</zutat>
          <quant>wenig </quant>
