<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>332 kcal</NaehrwertProPerson>
       <Fett>17 g  </Fett>
       <Kohlenhydrate>33 g  </Kohlenhydrate>
       <Eiweiss>12 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Linsen    >
          <quant>100 g</quant>
          <zutat>braune Linsen</zutat>
          <quant> </quant>
          <zutat>Wasser, siedend</zutat>
      </Linsen    >
      <Kuerbis_   >
          <quant>400 g</quant>
          <zutat>Kuerbis (z.B. Butternuss), quer in ca. 5 mm dicken Scheiben, geviertelt</zutat>
          <quant>1 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1/2 TL</quant>
          <zutat>Curry</zutat>
          <quant>1/2 TL</quant>
          <zutat>Kreuzkuemmelpulver</zutat>
      </Kuerbis_   >
      <Salatsauce>
          <quant>1 </quant>
          <zutat>Zitrone, nur der Saft</zutat>
          <quant>4 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1 TL</quant>
          <zutat>Honig</zutat>
          <quant>1 Bund</quant>
          <zutat>Petersilie, fein geschnitten</zutat>
          <quant>1 TL</quant>
          <zutat>Salz</zutat>
      </Salatsauce>
      <Salat     >
          <quant>1 Dose</quant>
          <zutat>Kichererbsen (ca. 220 g), abgespuelt, abgetropft</zutat>
          <quant>1 </quant>
          <zutat>Bundzwiebel mit dem Gruen, in feinen Ringen</zutat>
          <quant> </quant>
          <zutat>Salz, Pfeffer, nach Bedarf</zutat>
      </Salat     >
   </einkaufliste>
   <rezept>
      <Linsen    >
          <inhalt>Linsen im Wasser ca. 25 Min. kochen, abtropfen, auskuehlen.</inhalt>
      </Linsen    >
      <Kuerbis_   >
          <inhalt>Kuerbis, Oel und Gewuerzen mischen, auf einem mit Backpapier belegten Blech verteilen.</inhalt>
      </Kuerbis_   >
      <Backen:   >
          <inhalt>ca. 15 Min. in der Mitte des auf 220 Grad vorgeheizten Ofens. Herausnehmen, auskuehlen.</inhalt>
      </Backen:   >
      <Salatsauce>
          <inhalt>Zitronensaft, Oel, Honig und Petersilie verruehren, salzen.</inhalt>
      </Salatsauce>
      <Salat     >
          <inhalt>Linsen und Kuerbis mit den Kichererbsen, Bundzwiebel und Sauce mischen. Salat ca. 10 Min. ziehen lassen, wuerzen.</inhalt>
      </Salat     >
   </rezept>
</Rezept>