<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>90 kcal </NaehrwertProPerson>
       <Fett>6 g   </Fett>
       <Kohlenhydrate>7 g   </Kohlenhydrate>
       <Eiweiss>2 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Popsicles >
          <quant>500 g</quant>
          <zutat>griechischer Jogurt nature</zutat>
          <quant>2 EL</quant>
          <zutat>Puderzucker</zutat>
          <quant>1/2 </quant>
          <zutat>Zitrone, nur Saft</zutat>
          <quant>250 g</quant>
          <zutat>Beerenmischung (frisch oder tiefgekuehlt), leicht zerdrueckt</zutat>
          <quant>2 EL</quant>
          <zutat>Granola</zutat>
      </Popsicles >
   </einkaufliste>
   <rezept>
      <Popsicles >
          <inhalt>Joghurt mit Zucker und Zitronensaft gut verruehren. Abwechselnd mit Beeren und Granola in die Glacebehaelter fuellen..</inhalt>
      </Popsicles >
      <Gefrieren >
          <inhalt>Ca. 4 Stunden.                </inhalt>
      </Gefrieren >
   </rezept>
</Rezept>