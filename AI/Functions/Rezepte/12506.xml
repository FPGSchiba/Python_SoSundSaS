       <Kohlenhydrate>59 g  </Kohlenhydrate>
       <Eiweiss>16 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Gersotto  >
          <quant>2 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>2 </quant>
          <zutat>Zwiebeln, in feinen Streifen</zutat>
          <quant>2 </quant>
          <zutat>Knoblauchzehen, gepresst</zutat>
          <quant>300 g</quant>
          <zutat>geschaelte Rollgerste (z.B. Pro Montagna)</zutat>
          <quant>2 dl</quant>
          <zutat>Weisswein</zutat>
          <quant>6 dl</quant>
          <zutat>Gemuesebouillon, heiss</zutat>
      </Gersotto  >
      <Gemuese    >
          <quant>300 g</quant>
          <zutat>Jungspinat</zutat>
          <quant>1 Bund</quant>
          <zutat>Radiesli, in Streifen</zutat>
          <quant>80 g</quant>
          <zutat>Bergkaese (z.B. Pro Montagna), grob gerieben</zutat>
          <quant> </quant>
          <zutat>Salz, Pfeffer, nach Bedarf</zutat>
      </Gemuese    >
