       <NaehrwertProPerson>358 kcal</NaehrwertProPerson>
       <Fett>23 g  </Fett>
       <Kohlenhydrate>30 g  </Kohlenhydrate>
       <Eiweiss>8 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Sauce_    >
          <quant>4 EL</quant>
          <zutat>Aceto balsamico bianco</zutat>
          <quant>5 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>4 EL</quant>
          <zutat>Pfefferminze, fein geschnitten</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>tasmanischer Pfeffer</zutat>
      </Sauce_    >
      <Pasta_    >
          <quant>100 g</quant>
          <zutat>Teigwaren (z.B. Fregola Sarda)</zutat>
          <quant> </quant>
          <zutat>Salzwasser, siedend</zutat>
      </Pasta_    >
      <Salat_    >
          <quant>800 g</quant>
