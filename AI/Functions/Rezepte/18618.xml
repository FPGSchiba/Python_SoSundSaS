<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>246 kcal</NaehrwertProPerson>
       <Fett>14 g  </Fett>
       <Kohlenhydrate>9 g   </Kohlenhydrate>
       <Eiweiss>19 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Salsa     >
          <quant>4 </quant>
          <zutat>flache Pfirsiche, in Wuerfeli</zutat>
          <quant>1/2 </quant>
          <zutat>Gurke, in Wuerfeli</zutat>
          <quant>1 Bund</quant>
          <zutat>Koriander, fein geschnitten</zutat>
          <quant>2 </quant>
          <zutat>rote Chilis, entkernt, fein gehackt</zutat>
          <quant>2 EL</quant>
          <zutat>Limettensaft</zutat>
          <quant>2 TL</quant>
          <zutat>Sesamoel</zutat>
          <quant>1/2 TL</quant>
          <zutat>Salz</zutat>
      </Salsa     >
      <Tofu      >
          <quant> </quant>
          <zutat>Kokosoel zum Anbraten</zutat>
          <quant>500 g</quant>
          <zutat>Tofu (z.B. Kichererbsen und Kokos), in ca. 1 cm dicken Scheiben</zutat>
          <quant>1/2 TL</quant>
          <zutat>Salz</zutat>
      </Tofu      >
      <Anrichten >
          <quant>4 EL</quant>
          <zutat>Sesam, geroestet</zutat>
      </Anrichten >
   </einkaufliste>
   <rezept>
      <Salsa     >
          <inhalt>Pfirsiche mit allen Zutaten bis und mit Salz mischen, zugedeckt im Kuehlschrank ziehen lassen.</inhalt>
      </Salsa     >
      <Tofu      >
          <inhalt>Oel in einer Bratpfanne erhitzen. Tofu portionenweise beidseitig je ca. 2 Min. anbraten, salzen, warm stellen.</inhalt>
      </Tofu      >
      <Anrichten >
          <inhalt>Tofu und Salsa auf Teller anrichten, Sesam darueberstreuen.</inhalt>
      </Anrichten >
   </rezept>
</Rezept>