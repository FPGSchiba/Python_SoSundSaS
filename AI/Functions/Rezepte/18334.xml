   </meta>
   <einkaufliste>
      <Reisnudeln>
          <quant>250 g</quant>
          <zutat>Reisnudeln</zutat>
          <quant> </quant>
          <zutat>Wasser, siedend</zutat>
      </Reisnudeln>
      <Hackfleisch_>
          <quant>2 EL</quant>
          <zutat>Sesamoel</zutat>
          <quant>500 g</quant>
          <zutat>Hackfleisch (Schwein)</zutat>
          <quant>2 </quant>
          <zutat>Knoblauchzehen, fein gehackt</zutat>
          <quant>3 </quant>
          <zutat>Zitronengras , Inneres fein gehackt</zutat>
          <quant>4 cm</quant>
          <zutat>Ingwer, fein gerieben</zutat>
          <quant>1 </quant>
          <zutat>roter Chili, entkernt, fein gehackt</zutat>
          <quant>1/2 Bund</quant>
          <zutat>Thai-Basilikum, fein geschnitten</zutat>
          <quant>1 Bund</quant>
          <zutat>Koriander, fein geschnitten</zutat>
          <quant>2 1/2 dl</quant>
          <zutat>Fleischbouillon</zutat>
          <quant>2 1/2 EL</quant>
          <zutat>Fischsauce</zutat>
          <quant>3 EL</quant>
          <zutat>Reisessig</zutat>
      </Hackfleisch_>
      <Bowl_     >
          <quant>1 </quant>
          <zutat>Gurke, geschaelt, halbiert, entkernt, in Scheiben</zutat>
          <quant>1/2 Bund</quant>
          <zutat>Thai-Basilikum, Blaetter abgezupft</zutat>
          <quant>1 Bund</quant>
          <zutat>Koriander, Blaetter abgezupft</zutat>
          <quant>1 </quant>
