<Rezept>
   <meta>
       <NaehrwertProPerson>16 kcal </NaehrwertProPerson>
       <Kohlenhydrate>4 g   </Kohlenhydrate>
   </meta>
   <einkaufliste>
      <Aprikosen-Eiswuerfel>
          <quant>1 </quant>
          <zutat>Aprikosen, in Wuerfeli</zutat>
          <quant>1 Zweiglein</quant>
          <zutat>Thymian, Blaettchen abgezupft</zutat>
          <quant> </quant>
          <zutat>Wasser</zutat>
      </Aprikosen-Eiswuerfel>
      <Ice_Tea   >
          <quant>8 dl</quant>
          <zutat>Wasser</zutat>
          <quant>1 Beutel</quant>
          <zutat>Gruentee</zutat>
          <quant>2 EL</quant>
          <zutat>Bluetenhonig</zutat>
          <quant>4 Zweiglein</quant>
          <zutat>Pfefferminze, ein Zweiglein beiseite gestellt</zutat>
          <quant>3 Zweiglein</quant>
          <zutat>Thymian, ein Zweiglein beiseite gestellt</zutat>
          <quant>1/2 TL</quant>
          <zutat>Kurkuma</zutat>
          <quant>1/2 </quant>
          <zutat>Zitrone, nur Saft</zutat>
      </Ice_Tea   >
