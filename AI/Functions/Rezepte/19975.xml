       <Eiweiss>15 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Brot      >
          <quant>50 g</quant>
          <zutat>ungesalzene geschaelte Pistazien, grob gehackt</zutat>
          <quant>250 g</quant>
          <zutat>Brot, in Wuerfeln</zutat>
          <quant>2 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1 </quant>
          <zutat>Knoblauchzehe, gepresst</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
          <quant>1 </quant>
          <zutat>rote Zwiebel, in feinen Streifen</zutat>
      </Brot      >
      <Salat     >
          <quant>1 EL</quant>
          <zutat>grobkoerniger Senf</zutat>
          <quant>1 </quant>
          <zutat>Bio-Zitrone, abgeriebene Schale und 3 EL Saft</zutat>
          <quant>4 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
          <quant>300 g</quant>
