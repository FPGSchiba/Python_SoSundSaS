   </meta>
   <einkaufliste>
      <Teig      >
          <quant>200 g</quant>
          <zutat>Weissmehl</zutat>
          <quant>1 Paeckli</quant>
          <zutat>Vanillezucker</zutat>
          <quant>1 Prise</quant>
          <zutat>Salz</zutat>
          <quant>2 1/2 dl</quant>
          <zutat>Milch</zutat>
          <quant>4 </quant>
          <zutat>frische Eigelbe</zutat>
      </Teig      >
      <Kompott   >
          <quant>200 g</quant>
          <zutat>entsteinte Doerrpflaumen, geviertelt</zutat>
          <quant>2 EL</quant>
          <zutat>Zucker</zutat>
          <quant>1 EL</quant>
          <zutat>Wasser</zutat>
          <quant>4 </quant>
          <zutat>frische Eiweisse</zutat>
          <quant>1 Prise</quant>
          <zutat>Salz</zutat>
          <quant>3 EL</quant>
          <zutat>Zucker</zutat>
      </Kompott   >
      <Backen    >
          <quant> </quant>
          <zutat>Bratbutter zum Backen</zutat>
          <quant> </quant>
