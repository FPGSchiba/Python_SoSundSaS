<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>230 kcal</NaehrwertProPerson>
       <Fett>6 g   </Fett>
       <Kohlenhydrate>30 g  </Kohlenhydrate>
       <Eiweiss>13 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Dressing  >
          <quant>1 </quant>
          <zutat>Bio-Zitrone, wenig abgeriebene Schale, ganzer Saft</zutat>
          <quant>1 EL</quant>
          <zutat>Apfelessig</zutat>
          <quant>1 1/2 dl</quant>
          <zutat>Tahina </zutat>
          <quant>1 </quant>
          <zutat>Knoblauchzehe, gepresst</zutat>
          <quant>1 Bund</quant>
          <zutat>Dill, fein geschnitten</zutat>
          <quant>1/2 TL</quant>
          <zutat>Salz</zutat>
      </Dressing  >
      <Salat     >
          <quant>2 Dosen</quant>
          <zutat>Kichererbsen (je ca. 400 g), abgetropft, abgespuelt</zutat>
          <quant>1 </quant>
          <zutat>rote Zwiebel, fein gehackt</zutat>
          <quant>150 g</quant>
          <zutat>Rueebli, in Wuerfeli</zutat>
          <quant>200 g</quant>
          <zutat>Stangensellerie, in Wuerfeli</zutat>
      </Salat     >
      <Anrichten >
          <quant>4 Stueck</quant>
          <zutat>Baby-Salate, Blaetter abgeloest</zutat>
          <quant>150 g</quant>
          <zutat>Cherry-Tomaten, geviertelt</zutat>
      </Anrichten >
   </einkaufliste>
   <rezept>
      <Dressing  >
          <inhalt>Zitronenschale und -saft mit allen Zutaten bis und mit Salz in einer Schuessel gut verruehren, beiseite stellen.</inhalt>
      </Dressing  >
      <Salat     >
          <inhalt>Kichererbsen grob puerieren, mit dem Gemuese und der Sauce mischen.</inhalt>
      </Salat     >
      <Anrichten >
          <inhalt>Salatblaetter mit dem Kichererbsen-Salat fuellen, auf Tellern anrichten, mit den Tomaten garnieren.</inhalt>
      </Anrichten >
   </rezept>
</Rezept>