          <quant>5 </quant>
          <zutat>Nelken</zutat>
          <quant>2 </quant>
          <zutat>Zimtstangen</zutat>
          <quant>2 </quant>
          <zutat>Sternanise</zutat>
          <quant>3 </quant>
          <zutat>Kardamomkapseln</zutat>
