   <einkaufliste>
      <Gurken_   >
          <quant>3 EL</quant>
          <zutat>Aceto balsamico bianco</zutat>
          <quant>1 Prise</quant>
          <zutat>Salz</zutat>
          <quant>3 </quant>
          <zutat>Snack-Gurken, laengs in feinen Scheiben</zutat>
      </Gurken_   >
      <Speck     >
          <quant>80 g</quant>
          <zutat>Speckwuerfeli</zutat>
          <quant>2 EL</quant>
          <zutat>Rohzucker</zutat>
          <quant>3 </quant>
          <zutat>Schalotten, in feinen Streifen</zutat>
          <quant>1 dl</quant>
          <zutat>roter Portwein</zutat>
      </Speck     >
      <Schnittlauchsauce_>
          <quant>100 g</quant>
          <zutat>Creme fraiche</zutat>
          <quant>1 EL</quant>
          <zutat>Schnittlauch, fein geschnitten</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
      </Schnittlauchsauce_>
      <Hacktaetschli>
          <quant>500 g</quant>
          <zutat>Hackfleisch (Rind und Schwein)</zutat>
          <quant>100 g</quant>
          <zutat>Raclettekaese, in Wuerfeli</zutat>
          <quant>1 1/4 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
          <quant>4 </quant>
          <zutat>Burger-Broetli mit Sesam, halbiert</zutat>
      </Hacktaetschli>
