          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
      </Vorbereiten_>
      <Fuellung_  >
          <quant>8 </quant>
          <zutat>Bratspeck in Tranchen</zutat>
          <quant>1 </quant>
          <zutat>Schalotte, fein gehackt</zutat>
          <quant>1 EL</quant>
