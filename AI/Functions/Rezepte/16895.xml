   <einkaufliste>
      <Granatapfelkerne_>
          <quant>70 g</quant>
          <zutat>Granatapfelkerne</zutat>
      </Granatapfelkerne_>
      <Sorbet    >
          <quant>3 dl</quant>
          <zutat>Prosecco</zutat>
          <quant>3 </quant>
          <zutat>Granataepfel, ausgepresst (ergibt ca. 2 dl Saft)</zutat>
          <quant>75 g</quant>
          <zutat>Zucker</zutat>
          <quant>1 EL</quant>
          <zutat>Birnel (Birnendicksaft)</zutat>
          <quant>1 EL</quant>
          <zutat>Limettensaft</zutat>
          <quant>1 Msp.</quant>
          <zutat>Zimt</zutat>
