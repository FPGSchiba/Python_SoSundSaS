   </meta>
   <einkaufliste>
      <Smoothie  >
          <quant>2 </quant>
          <zutat>rote Peperoni, in Stuecken</zutat>
          <quant>4 dl</quant>
          <zutat>roter Traubensaft</zutat>
          <quant>2 EL</quant>
          <zutat>Tomatenpueree</zutat>
          <quant>1 </quant>
