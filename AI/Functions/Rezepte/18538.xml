<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>39 kcal </NaehrwertProPerson>
       <Fett>1 g   </Fett>
       <Kohlenhydrate>6 g   </Kohlenhydrate>
       <Eiweiss>2 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Chinakohl >
          <quant>400 g</quant>
          <zutat>Chinakohl, in ca. 2 cm breiten Streifen</zutat>
          <quant>6 EL</quant>
          <zutat>Salz</zutat>
          <quant>4 dl</quant>
          <zutat>Wasser</zutat>
      </Chinakohl >
      <Gewuerzpaste>
          <quant>2 </quant>
          <zutat>Knoblauchzehen, fein gehackt</zutat>
          <quant>40 g</quant>
          <zutat>Ingwer, fein geschnitten</zutat>
          <quant>2 TL</quant>
          <zutat>Rosenpaprika</zutat>
          <quant>2 TL</quant>
          <zutat>milder Paprika</zutat>
          <quant>2 TL</quant>
          <zutat>Fischsauce</zutat>
      </Gewuerzpaste>
      <Gemuese    >
          <quant>200 g</quant>
          <zutat>Rueebli, in ca. 5 cm langen Streifen</zutat>
          <quant>250 g</quant>
          <zutat>Rettich, in ca. 5 cm langen Streifen</zutat>
          <quant>1 </quant>
          <zutat>Bundzwiebel mit dem Gruen, in Ringen</zutat>
      </Gemuese    >
   </einkaufliste>
   <rezept>
      <Chinakohl >
          <inhalt>Chinakohl in eine Schuessel geben, Salz darueberstreuen, Wasser dazugiessen, gut mischen, ca. 15 Min. ziehen lassen. Chinakohl sehr gut abspuelen, abtropfen, in eine Schuessel geben.</inhalt>
      </Chinakohl >
      <Gewuerzpaste>
          <inhalt>Knoblauch mit allen Zutaten bis und mit Fischsauce mischen, zum Gemuese geben, gut mischen. </inhalt>
      </Gewuerzpaste>
      <Gemuese    >
          <inhalt>Gemuese zum Chinakohl geben, mischen.</inhalt>
      </Gemuese    >
   </rezept>
</Rezept>