       <Kohlenhydrate>41 g  </Kohlenhydrate>
       <Eiweiss>12 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Baguette  >
          <quant>1 </quant>
          <zutat>Frischback-Baguette (ca. 250 g)</zutat>
          <quant>1 EL</quant>
          <zutat>Butter</zutat>
          <quant>1 </quant>
          <zutat>Knoblauchzehe, gepresst</zutat>
          <quant>1 </quant>
          <zutat>Ziegenweichkaese (z.B. Tendre Buche), in Scheiben</zutat>
          <quant>2 EL</quant>
          <zutat>fluessiger Honig</zutat>
          <quant>1 TL</quant>
          <zutat>getrockneter Rosmarin</zutat>
      </Baguette  >
      <Salat     >
          <quant>1 TL</quant>
          <zutat>milder Senf</zutat>
          <quant>2 EL</quant>
          <zutat>Weissweinessig</zutat>
          <quant>3 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
