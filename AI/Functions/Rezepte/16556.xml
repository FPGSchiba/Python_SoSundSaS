       <Kohlenhydrate>98 g  </Kohlenhydrate>
       <Eiweiss>33 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Teigwaren >
          <quant>500 g</quant>
          <zutat>Teigwaren (z.B. Farfalle)</zutat>
          <quant> </quant>
          <zutat>Salzwasser, siedend</zutat>
      </Teigwaren >
      <Gratin_   >
          <quant>5 dl</quant>
          <zutat>Vollrahm</zutat>
          <quant>2 dl</quant>
          <zutat>Milch</zutat>
          <quant>4 EL</quant>
          <zutat>Tomatenpueree</zutat>
          <quant>150 g</quant>
          <zutat>Parmesan, gerieben</zutat>
