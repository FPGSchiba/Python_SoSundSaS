          <quant>50 g</quant>
          <zutat>Butter</zutat>
          <quant>2 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>2 Zweiglein</quant>
          <zutat>Rosmarin</zutat>
          <quant>2 </quant>
          <zutat>Knoblauchzehen, zerdrueckt</zutat>
          <quant>2 </quant>
          <zutat>Lorbeerblaetter</zutat>
          <quant>1 1/2 TL</quant>
