<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>98 kcal </NaehrwertProPerson>
       <Kohlenhydrate>11 g  </Kohlenhydrate>
   </meta>
   <einkaufliste>
      <Eiswuerfel >
          <quant>1 EL</quant>
          <zutat>Rosmarinnadeln</zutat>
          <quant>1 </quant>
          <zutat>Limette, heiss abgespuelt, trocken getupft, laengs geviertelt, in feinen Scheiben</zutat>
          <quant> </quant>
          <zutat>Wasser</zutat>
      </Eiswuerfel >
      <Sangria   >
          <quant>5 dl</quant>
          <zutat>Rosewein (z.B Oeil de Perdrix)</zutat>
          <quant>2 1/2 dl</quant>
          <zutat>Grapefruitsaft</zutat>
          <quant>2 1/2 dl</quant>
          <zutat>Mineralwasser mit Kohlensaeure</zutat>
          <quant>1 dl</quant>
          <zutat>Orangenlikoer (z.B. Cointreau)</zutat>
          <quant>250 g</quant>
          <zutat>Kirschen</zutat>
      </Sangria   >
   </einkaufliste>
   <rezept>
      <Eiswuerfel >
          <inhalt>Rosmarin und Limette in den Vertiefungen der Eiswuerfelform verteilen, mit Wasser auffuellen, ca. 4 Std. gefrieren. </inhalt>
      </Eiswuerfel >
      <Sangria   >
          <inhalt>Wein, Grapefruitsaft, Wasser und Orangenlikoer in eine Karaffe giessen. Kirschen und Eiswuerfel beigeben, sorgfaeltig mischen. </inhalt>
      </Sangria   >
   </rezept>
</Rezept>