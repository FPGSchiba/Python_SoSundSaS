<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>547 kcal</NaehrwertProPerson>
       <Fett>33 g  </Fett>
       <Kohlenhydrate>54 g  </Kohlenhydrate>
       <Eiweiss>7 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Glace-Sandwiches>
          <quant>100 g</quant>
          <zutat>Schokoladeglace, angetaut</zutat>
          <quant>2 EL</quant>
          <zutat>ungesalzene geschaelte Pistazien, grob gehackt</zutat>
          <quant>8 </quant>
          <zutat>Guetzli (z.B. Schoko-Cookies)</zutat>
      </Glace-Sandwiches>
      <Schokoladenueberzug_>
          <quant>1 Beutel</quant>
          <zutat>dunkle Kuchenglasur (ca. 125 g), geschmolzen</zutat>
          <quant>1 EL</quant>
          <zutat>ungesalzene geschaelte Pistazien, grob gehackt</zutat>
      </Schokoladenueberzug_>
   </einkaufliste>
   <rezept>
      <Glace-Sandwiches>
          <inhalt>Glace und Pistazien mischen. Je ca. 2 EL Glace auf 4 Guetzli geben, restliche Guetzli darauflegen. Guetzli-Sandwiches ca. 30 Min. gefrieren. </inhalt>
      </Glace-Sandwiches>
      <Schokoladenueberzug_>
          <inhalt>Glace-Sandwiches bis zur Haelfte in die Kuchenglasur tauchen, mit Pistazien bestreuen, ca. 2 Min. auf einem Gitter trocknen. Nochmals ca. 30 Min. gefrieren. </inhalt>
      </Schokoladenueberzug_>
   </rezept>
</Rezept>