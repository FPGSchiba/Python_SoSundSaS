   <einkaufliste>
      <Teig      >
          <quant>150 g</quant>
          <zutat>Butter, weich</zutat>
          <quant>150 g</quant>
          <zutat>Zucker</zutat>
          <quant>1 Beutel</quant>
          <zutat>Vanillezucker</zutat>
          <quant>1 Prise</quant>
          <zutat>Salz</zutat>
          <quant>4 </quant>
          <zutat>Eigelbe</zutat>
          <quant>440 g</quant>
