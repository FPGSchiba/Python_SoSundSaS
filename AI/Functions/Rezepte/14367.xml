<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>389 kcal</NaehrwertProPerson>
       <Fett>6 g   </Fett>
       <Kohlenhydrate>57 g  </Kohlenhydrate>
       <Eiweiss>26 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Vorbereiten>
          <quant>1 </quant>
          <zutat>Schalotte</zutat>
          <quant>30 g</quant>
          <zutat>Kapern, abgespuelt, abgetropft</zutat>
          <quant>30 g</quant>
          <zutat>entsteinte gruene Oliven</zutat>
          <quant>50 g</quant>
          <zutat>getrocknete Tomaten in Oel, abgetropft</zutat>
      </Vorbereiten>
      <Tatar     >
          <quant>300 g</quant>
          <zutat>Rindshuft, in feinen Wuerfeli</zutat>
          <quant>3 EL</quant>
          <zutat>Ketchup</zutat>
          <quant>1 EL</quant>
          <zutat>Worcestershire-Sauce</zutat>
          <quant>1/2 TL</quant>
          <zutat>scharfer Paprika</zutat>
          <quant>1/2 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
      </Tatar     >
      <Brot_roesten>
          <quant>1 </quant>
          <zutat>Baguette (ca. 415 g), schraeg in ca. 2 cm dicken Scheiben</zutat>
          <quant>einige </quant>
          <zutat>Zwiebelsprossen</zutat>
      </Brot_roesten>
   </einkaufliste>
   <rezept>
      <Vorbereiten>
          <inhalt>Schalotte, Kapern, Oliven und Tomaten zusammen fein hacken, in eine Schuessel geben.</inhalt>
      </Vorbereiten>
      <Tatar     >
          <inhalt>Fleisch und allen Zutaten bis und mit Pfeffer daruntermischen.</inhalt>
      </Tatar     >
      <Brot_roesten>
          <inhalt>Baguettescheiben in einer beschichteten Bratpfanne ohne Fett einseitig ca. 2 Min. roesten. Tatar darauf verteilen, Sprossen darueberstreuen.</inhalt>
      </Brot_roesten>
   </rezept>
</Rezept>