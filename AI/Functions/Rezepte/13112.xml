       <Eiweiss>10 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Hefeteig  >
          <quant>500 g</quant>
          <zutat>Zopfmehl</zutat>
          <quant>1 1/2 TL</quant>
          <zutat>Salz</zutat>
          <quant>1 EL</quant>
          <zutat>Zucker</zutat>
          <quant>1/2 Wuerfel</quant>
          <zutat>Hefe (ca. 20 g), zerbroeckelt</zutat>
          <quant>90 g</quant>
          <zutat>Butter, in Stuecken, weich</zutat>
          <quant>2 1/2 dl</quant>
          <zutat>Milch</zutat>
          <quant>1 </quant>
          <zutat>Ei, verklopft</zutat>
      </Hefeteig  >
      <Formen    >
          <quant>80 g</quant>
          <zutat>Nussmischung, grob gehackt</zutat>
          <quant>40 g</quant>
          <zutat>Schokoladen-Wuerfeli</zutat>
      </Formen    >
      <Verzieren >
          <quant>1 </quant>
          <zutat>Haselnuss</zutat>
          <quant>1 </quant>
          <zutat>Mandel</zutat>
          <quant>1 </quant>
          <zutat>Ei, verklopft</zutat>
