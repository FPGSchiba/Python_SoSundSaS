<Rezept>
   <meta>
       <NaehrwertProPerson>132 kcal</NaehrwertProPerson>
       <Fett>4 g   </Fett>
       <Kohlenhydrate>12 g  </Kohlenhydrate>
       <Eiweiss>8 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Sauce_    >
          <quant>1 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1 </quant>
          <zutat>Zwiebel, fein gehackt</zutat>
          <quant>1 </quant>
          <zutat>Knoblauchzehe, fein gehackt</zutat>
          <quant>2 EL</quant>
          <zutat>Tomatenpueree</zutat>
          <quant>2 dl</quant>
          <zutat>Rotwein</zutat>
          <quant>2 Dosen</quant>
          <zutat>Cherry-Tomaten geschaelt</zutat>
          <quant>1/4 Bund</quant>
          <zutat>Basilikum, grob geschnitten</zutat>
          <quant>2 TL</quant>
          <zutat>Zucker</zutat>
          <quant>1 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
      </Sauce_    >
