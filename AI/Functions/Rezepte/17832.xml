   </meta>
   <einkaufliste>
      <Kartoffeln_kochen>
          <quant>800 g</quant>
          <zutat>fest kochende Kartoffeln (z.B. ProSpecieRara Ostara)</zutat>
          <quant> </quant>
          <zutat>Salzwasser, siedend</zutat>
      </Kartoffeln_kochen>
      <Sauce     >
          <quant>2 EL</quant>
          <zutat>grobkoerniger Senf</zutat>
          <quant>2 EL</quant>
          <zutat>Kraeuteressig</zutat>
          <quant>2 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1 TL</quant>
          <zutat>Honig</zutat>
          <quant>250 g</quant>
          <zutat>Frischkaese nature</zutat>
          <quant>1/4 TL</quant>
          <zutat>Muskat</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
      </Sauce     >
      <Salat     >
          <quant>50 g</quant>
          <zutat>Landkresse</zutat>
