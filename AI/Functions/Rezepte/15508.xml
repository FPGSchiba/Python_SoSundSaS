<Rezept>
   <meta>
       <NaehrwertProPerson>358 kcal</NaehrwertProPerson>
       <Fett>28 g  </Fett>
       <Kohlenhydrate>15 g  </Kohlenhydrate>
       <Eiweiss>6 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Dressing_ >
          <quant>4 EL</quant>
          <zutat>Apfelessig</zutat>
          <quant>4 EL</quant>
          <zutat>Sesamoel</zutat>
          <quant>2 TL</quant>
          <zutat>Sojasauce</zutat>
          <quant>1 TL</quant>
          <zutat>Wasabi-Paste</zutat>
          <quant>1 EL</quant>
          <zutat>schwarzer Sesam</zutat>
      </Dressing_ >
      <Salat     >
          <quant>150 g</quant>
          <zutat>Weisskabis, in feinen Streifen</zutat>
          <quant>1 Bund</quant>
          <zutat>Radiesli, in Schnitzchen</zutat>
          <quant>4 </quant>
          <zutat>gruene Spargeln, mit dem Sparschaeler in duenne Streifen abgeschaellt</zutat>
          <quant>100 g</quant>
          <zutat>Cherry-Tomaten, geviertelt</zutat>
          <quant>1 </quant>
          <zutat>Rueebli, in Streifen</zutat>
          <quant>20 g</quant>
          <zutat>Gartenkresse</zutat>
      </Salat     >
   </einkaufliste>
   <rezept>
      <Dressing_ >
          <inhalt>Essig und alle Zutaten bis und mit Sesam gut verruehren. In das kleine Glas fuellen, gut verschliessen. bis zum Servieren kuehl stellen.</inhalt>
      </Dressing_ >
      <Salat     >
          <inhalt>Kabis und alle Zutaten bis und mit Rueebli in die Glaeser schichten, Kresse darauf verteilen. Vor dem Servieren Dressing daruebertraeufeln. </inhalt>
      </Salat     >
   </rezept>
