<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>187 kcal</NaehrwertProPerson>
       <Fett>12 g  </Fett>
       <Kohlenhydrate>8 g   </Kohlenhydrate>
       <Eiweiss>9 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Pistazien_>
          <quant>40 g</quant>
          <zutat>ungesalzene geschaelte Pistazien</zutat>
      </Pistazien_>
      <Sauce_    >
          <quant>2 EL</quant>
          <zutat>Aceto balsamico</zutat>
          <quant>2 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>2 TL</quant>
          <zutat>Birnel (Birnendicksaft)</zutat>
          <quant>60 g</quant>
          <zutat>Johannisbeeren</zutat>
          <quant>3 EL</quant>
          <zutat>Dill, fein geschnitten</zutat>
          <quant>1 </quant>
          <zutat>roter Chili, entkernt, fein geschnitten</zutat>
          <quant>1/2 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
      </Sauce_    >
      <Salat_    >
          <quant>300 g</quant>
          <zutat>Stangensellerie, in feinen Scheiben</zutat>
          <quant>100 g</quant>
          <zutat>Jungspinat</zutat>
          <quant>10 g</quant>
          <zutat>Dill, grob geschnitten</zutat>
          <quant>100 g</quant>
          <zutat>geraeucherte Forellenfilets, grob zerzupft</zutat>
          <quant>60 g</quant>
          <zutat>Johannisbeeren</zutat>
      </Salat_    >
   </einkaufliste>
   <rezept>
      <Pistazien_>
          <inhalt>Pistazien in einer Bratpfanne ohne Fett roesten. </inhalt>
      </Pistazien_>
      <Sauce_    >
          <inhalt>Essig, Oel und Birnel in einer Schuessel verruehren, Johannisbeeren beigeben, mit einer Gabel zerdruecken. Dill und Chili daruntermischen, wuerzen. </inhalt>
      </Sauce_    >
      <Salat_    >
          <inhalt>Stangensellerie und Jungspinat in die Sauce geben, mischen, anrichten. Pistazien, Dill, Forelle und Johannisbeeren darauf verteilen. </inhalt>
      </Salat_    >
   </rezept>
</Rezept>