<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>573 kcal</NaehrwertProPerson>
       <Fett>46 g  </Fett>
       <Kohlenhydrate>2 g   </Kohlenhydrate>
       <Eiweiss>37 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Pesto_    >
          <quant>20 g</quant>
          <zutat>Baerlauch, grob geschnitten</zutat>
          <quant>30 g</quant>
          <zutat>Rucola, grob geschnitten</zutat>
          <quant>50 g</quant>
          <zutat>Mandeln, grob gehackt, geroestet</zutat>
          <quant>1 dl</quant>
          <zutat>Olivenoel</zutat>
          <quant>2 EL</quant>
          <zutat>Zitronensaft</zutat>
          <quant>2 EL</quant>
          <zutat>Wasser</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
      </Pesto_    >
      <Kalbskoteletts_>
          <quant>4 </quant>
          <zutat>Kalbskoteletts (je ca. 200 g)</zutat>
          <quant>3/4 TL</quant>
          <zutat>Salz</zutat>
          <quant>1 EL</quant>
          <zutat>Olivenoel</zutat>
      </Kalbskoteletts_>
      <Salat     >
          <quant>250 g</quant>
          <zutat>roter Chicoree (z.B. Radicchio Trevisano), in Blaettern</zutat>
      </Salat     >
   </einkaufliste>
   <rezept>
      <Pesto_    >
          <inhalt>Baerlauch mit allen Zutaten bis und mit Salz puerieren. </inhalt>
      </Pesto_    >
      <Kalbskoteletts_>
          <inhalt>Koteletts salzen, mit 2 EL Pesto bestreichen. Oel in einer Bratpfanne erhitzen. Koteletts beidseitig je ca. 2 Min. braten. Herausnehmen, zugedeckt ca. 5 Min. ruhen lassen. </inhalt>
      </Kalbskoteletts_>
      <Salat     >
          <inhalt>Chicoree auf einer Platte anrichten, Koteletts darauf verteilen, Pesto daruebertraeufeln.</inhalt>
      </Salat     >
   </rezept>
</Rezept>