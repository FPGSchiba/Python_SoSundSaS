<Rezept>
   <meta>
       <NaehrwertProPerson>379 kcal</NaehrwertProPerson>
       <Fett>10 g  </Fett>
       <Kohlenhydrate>44 g  </Kohlenhydrate>
       <Eiweiss>14 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Getreide-Risotto>
          <quant>1/2 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1 </quant>
          <zutat>Zwiebel, fein gehackt</zutat>
          <quant>200 g</quant>
          <zutat>Getreide-Risotto</zutat>
          <quant>8 dl</quant>
          <zutat>Gemuesebouillon</zutat>
      </Getreide-Risotto>
      <Gemuese    >
          <quant>250 g</quant>
          <zutat>Kefen, schraeg in ca. 1 cm breiten Streifen</zutat>
          <quant>150 g</quant>
          <zutat>Jungspinat</zutat>
          <quant>1/2 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
          <quant>1/2 </quant>
          <zutat>Zitrone, nur Saft</zutat>
      </Gemuese    >
      <Topping   >
          <quant>200 g</quant>
          <zutat>Huettenkaese nature, abgespuelt, abgetropft</zutat>
          <quant>50 g</quant>
          <zutat>Kernen-Nuss-Mix</zutat>
      </Topping   >
   </einkaufliste>
   <rezept>
      <How_To    >
          <inhalt>Getreide-Risotto              </inhalt>
      </How_To    >
      <Getreide-Risotto>
          <inhalt>Fluessigkeit bedeckt ist.      </inhalt>
      </Getreide-Risotto>
      <Gemuese    >
          <inhalt>Nach ca. 50 Min. Kefen und Jungspinat beigeben, ca. 10 Min. unter Ruehren fertigkochen bis das Getreide cremig und al dente ist. Wuerzen und Zitronensaft beigeben. </inhalt>
      </Gemuese    >
      <Topping   >
          <inhalt>Huettenkaese daruntermischen, mit Kernen-Nuss-Mix bestreuen. </inhalt>
      </Topping   >
   </rezept>
