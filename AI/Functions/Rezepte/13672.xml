   </meta>
   <einkaufliste>
      <Pfirsich-Chutney>
          <quant>1 </quant>
          <zutat>Pfirsich (ca. 130 g), in Wuerfeli</zutat>
          <quant>1/2 </quant>
          <zutat>rote Zwiebel, in feinen Streifen</zutat>
          <quant>1 EL</quant>
          <zutat>Zucker</zutat>
          <quant>1 EL</quant>
          <zutat>Weissweinessig</zutat>
          <quant>1 EL</quant>
          <zutat>Wasser</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
      </Pfirsich-Chutney>
      <Rucola_   >
          <quant>1 EL</quant>
          <zutat>Weissweinessig</zutat>
          <quant>2 EL</quant>
          <zutat>Oel</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
          <quant>90 g</quant>
