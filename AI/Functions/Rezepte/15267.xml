          <quant>250 g</quant>
          <zutat>Sweet Mini Peppers (kleine Peperoni)</zutat>
          <quant>wenig </quant>
          <zutat>glattblaettrige Petersilie, Blaettchen abgezupft</zutat>
          <quant>2 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1/2 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
      </Ofengemuese>
      <Hackbaellchen_>
