<Rezept>
   <meta>
       <NaehrwertProPerson>344 kcal</NaehrwertProPerson>
       <Fett>13 g  </Fett>
       <Kohlenhydrate>30 g  </Kohlenhydrate>
       <Eiweiss>26 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Gewuerz-Quark>
          <quant>3 EL</quant>
          <zutat>Rahmquark</zutat>
          <quant>1 EL</quant>
          <zutat>grobkoerniger Senf</zutat>
          <quant>1/2 TL</quant>
          <zutat>Sambal Oelek</zutat>
      </Gewuerz-Quark>
      <Schnitzel-Broetli>
          <quant>1 EL</quant>
          <zutat>Olivenoel zum Braten</zutat>
          <quant>4 </quant>
          <zutat>Kalbsplaetzli (je ca. 70 g)</zutat>
          <quant>1/2 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
