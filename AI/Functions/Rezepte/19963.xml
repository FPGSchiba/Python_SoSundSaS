<Rezept>
   <meta>
       <NaehrwertProPerson>932 kcal</NaehrwertProPerson>
       <Fett>69 g  </Fett>
       <Kohlenhydrate>52 g  </Kohlenhydrate>
       <Eiweiss>25 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Reis      >
          <quant>200 g</quant>
          <zutat>Venere-Reis</zutat>
          <quant> </quant>
          <zutat>Salzwasser, siedend</zutat>
      </Reis      >
      <Eier      >
          <quant>2 </quant>
          <zutat>Eier</zutat>
          <quant> </quant>
          <zutat>Wasser, siedend</zutat>
      </Eier      >
      <Spargeln  >
          <quant>1 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>400 g</quant>
          <zutat>duenne gruene Spargeln</zutat>
          <quant>1/2 TL</quant>
          <zutat>Salz</zutat>
      </Spargeln  >
      <Sauce     >
          <quant>2 </quant>
          <zutat>Limetten, nur Saft</zutat>
          <quant>4 EL</quant>
          <zutat>Aceto balsamico bianco</zutat>
          <quant>1 dl</quant>
          <zutat>Sonnenblumenoel</zutat>
          <quant>3/4 dl</quant>
          <zutat>Sesamoel</zutat>
          <quant>2 EL</quant>
          <zutat>Ahornsirup</zutat>
          <quant>wenig </quant>
          <zutat>Kraeutersalz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
      </Sauce     >
      <Bowl      >
          <quant>2 </quant>
          <zutat>Avocados, laengs in Scheiben</zutat>
          <quant>200 g</quant>
          <zutat>Feta, in Wuerfeln</zutat>
          <quant>200 g</quant>
          <zutat>Edamame</zutat>
          <quant>1 Bund</quant>
          <zutat>Radiesli, in Scheibchen</zutat>
          <quant>100 g</quant>
          <zutat>Jungsalat</zutat>
          <quant>10 g</quant>
          <zutat>Micro Greens (z.B. aromatic)</zutat>
          <quant>10 g</quant>
          <zutat>Randensprossen</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
          <quant>wenig </quant>
          <zutat>Fleur de Sel</zutat>
      </Bowl      >
