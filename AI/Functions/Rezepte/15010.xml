<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>105 kcal</NaehrwertProPerson>
       <Fett>7 g   </Fett>
       <Kohlenhydrate>7 g   </Kohlenhydrate>
       <Eiweiss>3 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Grundmasse>
          <quant>250 g</quant>
          <zutat>Mandeln</zutat>
          <quant>12 </quant>
          <zutat>Datteln, entsteint</zutat>
          <quant>1/2 TL</quant>
          <zutat>Zimt</zutat>
          <quant>1 Prise</quant>
          <zutat>Salz</zutat>
      </Grundmasse>
      <Mandel-Zimt-Mischung>
          <quant>2 EL</quant>
          <zutat>gemahlene Mandeln</zutat>
          <quant>1/2 TL</quant>
          <zutat>Zimt</zutat>
      </Mandel-Zimt-Mischung>
   </einkaufliste>
   <rezept>
      <Grundmasse>
          <inhalt>Alle Zutaten im Cutter/Mixer zerkleinern, bis eine homogene Masse entsteht. Masse zu ca. 20 Kugeln formen.</inhalt>
      </Grundmasse>
      <Mandel-Zimt-Mischung>
          <inhalt>Mandeln mit dem Zimt mischen. Kugeln darin wenden und die Mischung etwas andruecken. Kugeln ca. 30 Min. kuehl stellen.</inhalt>
      </Mandel-Zimt-Mischung>
   </rezept>
</Rezept>