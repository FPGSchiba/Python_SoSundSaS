   <einkaufliste>
      <Liste     >
          <quant>1 </quant>
          <zutat>Knoblauchzehe, halbiert</zutat>
          <quant>500 g</quant>
          <zutat>Asiago, gerieben</zutat>
          <quant>2 EL</quant>
          <zutat>Maizena</zutat>
          <quant>3 dl</quant>
          <zutat>Weisswein (z.B. Pinot Grigio)</zutat>
          <quant>300 g</quant>
          <zutat>Blauschimmelkaese (z.B. Gorgonzola), mit der Gabel zerdrueckt</zutat>
