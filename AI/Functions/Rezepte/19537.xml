   </meta>
   <einkaufliste>
      <Pizzateig >
          <quant>400 g</quant>
          <zutat>Mehrkornmehl</zutat>
          <quant>1 1/2 TL</quant>
          <zutat>Salz</zutat>
          <quant>1/4 Wuerfel</quant>
          <zutat>Hefe (ca. 10 g), zerbroeckelt</zutat>
          <quant>2 dl</quant>
          <zutat>Wasser</zutat>
          <quant>2 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>2 EL</quant>
          <zutat>Basilikum, fein geschnitten</zutat>
      </Pizzateig >
      <Erdbeersauce>
          <quant>1/2 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>100 g</quant>
          <zutat>Erdbeeren, in Stuecken</zutat>
          <quant>1 TL</quant>
          <zutat>Zucker</zutat>
          <quant>1 EL</quant>
          <zutat>Aceto balsamico</zutat>
          <quant>1 Prise</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
      </Erdbeersauce>
      <Belag_    >
          <quant>300 g</quant>
          <zutat>Erdbeeren, halbiert</zutat>
          <quant>125 g</quant>
          <zutat>Mozzarella, zerzupft</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
      </Belag_    >
      <Backen    >
          <quant>100 g</quant>
          <zutat>Blauschimmelkaese (z.B. Gorgonzola), in Stuecken</zutat>
