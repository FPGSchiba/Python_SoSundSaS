   </meta>
   <einkaufliste>
      <Andaempfen >
          <quant>1 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1 </quant>
          <zutat>Zwiebel, in Schnitzchen</zutat>
          <quant>1 </quant>
