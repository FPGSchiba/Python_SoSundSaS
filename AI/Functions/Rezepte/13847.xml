          <quant>1 Staengel</quant>
          <zutat>Zitronengras , Inneres fein gehackt</zutat>
          <quant>4 </quant>
          <zutat>Kaffirlimetten-Blaetter (Thai-Kit)</zutat>
      </Andaempfen >
      <Suppe_zubereiten>
          <quant>1 1/5 Liter</quant>
          <zutat>Gemuesebouillon</zutat>
