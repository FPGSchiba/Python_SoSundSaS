<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>301 kcal</NaehrwertProPerson>
       <Fett>19 g  </Fett>
       <Kohlenhydrate>4 g   </Kohlenhydrate>
       <Eiweiss>28 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Fleisch   >
          <quant>400 g</quant>
          <zutat>Kalbsfilet , in hauchduennen Tranchen</zutat>
      </Fleisch   >
      <Sauce_    >
          <quant>2 1/2 EL</quant>
          <zutat>Zitronensaft</zutat>
          <quant>3 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
      </Sauce_    >
      <Salat     >
          <quant>250 g</quant>
          <zutat>verschiedenfarbige Cherry-Tomaten, geviertelt</zutat>
          <quant>1 </quant>
          <zutat>Schalotte, fein gehackt</zutat>
          <quant>150 g</quant>
          <zutat>Rettich, grob gerieben</zutat>
          <quant>100 g</quant>
          <zutat>Jungsalat</zutat>
          <quant>1/2 Bund</quant>
          <zutat>glattblaettrige Petersilie, grob zerzupft</zutat>
          <quant>1/2 Bund</quant>
          <zutat>Basilikum, grob zerzupft</zutat>
      </Salat     >
      <Anrichten_>
          <quant>70 g</quant>
          <zutat>Pecorino, grob gerieben</zutat>
      </Anrichten_>
   </einkaufliste>
   <rezept>
      <Fleisch   >
          <inhalt>Fleischtranchen portionenweise zwischen einem Plastikbeutel sorgfaeltig flach klopfen, auf Tellern anrichten. </inhalt>
      </Fleisch   >
      <Sauce_    >
          <inhalt>Zitronensaft und Oel verruehren, salzen. 1 1/2 EL Sauce beiseite stellen. </inhalt>
      </Sauce_    >
      <Salat     >
          <inhalt>Cherry-Tomaten und alle Zutaten bis und mit Basilikum gut mischen. Sauce daruntermischen. </inhalt>
      </Salat     >
      <Anrichten_>
          <inhalt>Fleisch mit beiseite gestellter Sauce betraeufeln. Salat auf dem Fleisch verteilen. Pecorino darauf verteilen. </inhalt>
      </Anrichten_>
   </rezept>
</Rezept>