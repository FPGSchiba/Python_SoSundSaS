<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>200 kcal</NaehrwertProPerson>
       <Fett>2 g   </Fett>
       <Kohlenhydrate>16 g  </Kohlenhydrate>
       <Eiweiss>3 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Beeren    >
          <quant>3 EL</quant>
          <zutat>getrocknete Cassisbeeren</zutat>
          <quant>4 EL</quant>
          <zutat>Wasser</zutat>
      </Beeren    >
      <Feigen_   >
          <quant>100 g</quant>
          <zutat>Frischkaese (z.B. Boursin)</zutat>
          <quant>1 TL</quant>
          <zutat>Salz</zutat>
          <quant>8 </quant>
          <zutat>Feigen, kreuzweise eingeschnitten</zutat>
          <quant>1/2 EL</quant>
          <zutat>Olivenoel</zutat>
      </Feigen_   >
   </einkaufliste>
   <rezept>
      <Beeren    >
          <inhalt>Cassisbeeren im Wasser zugedeckt ca. 4 Std. einweichen. </inhalt>
      </Beeren    >
      <Feigen_   >
          <inhalt>Kaese, Cassisbeeren und Salz puerieren, in die Einschnitte der Feigen verteilen. Oel daruebertraeufeln. </inhalt>
      </Feigen_   >
      <Backen_   >
          <inhalt>Ca. 10 Min. in der oberen Haelfte des auf 200 Grad vorgeheizten Ofens (Oberhitze). </inhalt>
      </Backen_   >
   </rezept>
</Rezept>