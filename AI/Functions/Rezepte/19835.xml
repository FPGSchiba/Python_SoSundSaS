<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>438 kcal</NaehrwertProPerson>
       <Fett>30 g  </Fett>
       <Kohlenhydrate>33 g  </Kohlenhydrate>
       <Eiweiss>7 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Knusperschicht>
          <quant>80 g</quant>
          <zutat>Panko oder Paniermehl</zutat>
          <quant>3 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>3 EL</quant>
          <zutat>Wasser</zutat>
          <quant>2 EL</quant>
          <zutat>glattblaettrige Petersilie, fein geschnitten</zutat>
          <quant>1 1/2 EL</quant>
          <zutat>Kapern, abgetropft, fein gehackt</zutat>
          <quant>1 </quant>
          <zutat>Knoblauchzehe, gepresst</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
      </Knusperschicht>
      <Aubergine >
          <quant>1 </quant>
          <zutat>Aubergine, in ca. 5 mm dicken Scheiben</zutat>
          <quant>2 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
      </Aubergine >
   </einkaufliste>
   <rezept>
      <Knusperschicht>
          <inhalt>Panko mit allen Zutaten bis und mit Salz mischen.  </inhalt>
      </Knusperschicht>
      <Aubergine >
          <inhalt>Auberginenscheiben auf ein mit Backpapier belegtes Blech legen. Mit Oel bestreichen, salzen. Knusperschicht darauf verteilen, andruecken. </inhalt>
      </Aubergine >
      <Backen    >
          <inhalt>Ca. 20 Min. in der Mitte des auf 200 Grad vorgeheizten Ofens. </inhalt>
      </Backen    >
   </rezept>
</Rezept>