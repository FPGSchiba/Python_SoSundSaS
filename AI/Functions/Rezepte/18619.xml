<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>322 kcal</NaehrwertProPerson>
       <Fett>17 g  </Fett>
       <Kohlenhydrate>30 g  </Kohlenhydrate>
       <Eiweiss>12 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Dressing  >
          <quant>2 EL</quant>
          <zutat>Aceto balsamico</zutat>
          <quant>4 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1 Bund</quant>
          <zutat>Basilikum, in feinen Streifen</zutat>
          <quant>1/2 TL</quant>
          <zutat>Salz</zutat>
      </Dressing  >
      <Salat     >
          <quant>2 Dosen</quant>
          <zutat>Kichererbsen (je ca. 400 g), abgespuelt, abgetropft</zutat>
          <quant>400 g</quant>
          <zutat>Tomaten (verschiedenfarbig), in Schnitzen</zutat>
          <quant>200 g</quant>
          <zutat>Erdbeeren, in Stuecken</zutat>
      </Salat     >
      <Garnieren >
          <quant>2 EL</quant>
          <zutat>Pinienkerne, geroestet</zutat>
      </Garnieren >
   </einkaufliste>
   <rezept>
      <Dressing  >
          <inhalt>Aceto, Oel, Basilikum und Salz in einer grossen Schuessel mischen.</inhalt>
      </Dressing  >
      <Salat     >
          <inhalt>Kichererbsen, Tomaten und Erdbeeren zum Dressing geben, mischen, zugedeckt ca. 1 Std. kuehl stellen.</inhalt>
      </Salat     >
      <Garnieren >
          <inhalt>Salat auf Teller anrichten, Pinienkerne darueberstreuen.</inhalt>
      </Garnieren >
   </rezept>
</Rezept>