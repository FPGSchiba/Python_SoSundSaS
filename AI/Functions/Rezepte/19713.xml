          <quant>1 </quant>
          <zutat>Peperoni, fein geschnitten</zutat>
          <quant>1 </quant>
          <zutat>Rueebli, fein gerieben</zutat>
          <quant>1 </quant>
          <zutat>Zwiebel, fein gehackt</zutat>
          <quant>1 Dose</quant>
          <zutat>gelbe Linsen (ca. 130 g), abgespuelt, abgetropft</zutat>
