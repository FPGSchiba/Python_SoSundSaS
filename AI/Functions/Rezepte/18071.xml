          <zutat>Hefe (ca. 20 g), zerbroeckelt</zutat>
          <quant>3 1/2 dl</quant>
          <zutat>Wasser</zutat>
          <quant>3 EL</quant>
          <zutat>Olivenoel</zutat>
      </Pizzateig >
      <Belag     >
          <quant>wenig </quant>
          <zutat>Hartweizengriess</zutat>
          <quant>50 g</quant>
          <zutat>Jungspinat</zutat>
          <quant>1/2 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>2 dl</quant>
          <zutat>passierte Tomaten</zutat>
          <quant>1 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1 </quant>
          <zutat>Knoblauchzehe, gepresst</zutat>
          <quant>1 EL</quant>
          <zutat>Basilikum, fein geschnitten</zutat>
          <quant>1/4 TL</quant>
