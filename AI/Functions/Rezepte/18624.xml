          <zutat>Salz</zutat>
      </Zwiebel-Pickles>
      <Jackfruit >
          <quant>2 Dosen</quant>
          <zutat>Jackfruit  (je ca. 200 g), abgetropft</zutat>
          <quant>1 1/2 dl</quant>
          <zutat>Wasser</zutat>
          <quant>4 EL</quant>
          <zutat>Sojasauce</zutat>
          <quant>2 EL</quant>
          <zutat>Limettensaft</zutat>
          <quant>2 EL</quant>
          <zutat>Dattelsirup</zutat>
          <quant>2 </quant>
