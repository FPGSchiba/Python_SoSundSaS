   </meta>
   <einkaufliste>
      <Buchweizen>
          <quant>200 g</quant>
          <zutat>Buchweizen</zutat>
          <quant>4 dl</quant>
          <zutat>Salzwasser, siedend</zutat>
      </Buchweizen>
      <Toppings  >
          <quant>30 g</quant>
          <zutat>Federkohl (z.B. ProSpecieRara Baby-Kale)</zutat>
          <quant>70 g</quant>
          <zutat>Mandeln, grob gehackt</zutat>
          <quant>1 EL</quant>
          <zutat>Limettensaft</zutat>
          <quant>1 dl</quant>
          <zutat>Olivenoel</zutat>
          <quant>1 1/2 TL</quant>
          <zutat>Ahornsirup</zutat>
          <quant>20 g</quant>
          <zutat>geriebener Parmesan</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
          <quant>1/4 TL</quant>
          <zutat>Fleur de Sel</zutat>
          <quant>50 g</quant>
          <zutat>Federkohl (z.B. ProSpecieRara Baby-Kale)</zutat>
          <quant>1/2 EL</quant>
          <zutat>Olivenoel</zutat>
      </Toppings  >
      <Salat_    >
          <quant>2 EL</quant>
          <zutat>Limettensaft</zutat>
          <quant>1/2 EL</quant>
