<Rezept>
   <meta>
       <NaehrwertProPerson>112 kcal</NaehrwertProPerson>
       <Fett>2 g   </Fett>
       <Kohlenhydrate>22 g  </Kohlenhydrate>
       <Eiweiss>2 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Liste     >
          <quant>2 dl</quant>
          <zutat>Milch</zutat>
          <quant>2 EL</quant>
          <zutat>Rapsoel</zutat>
          <quant>1 </quant>
          <zutat>Ei</zutat>
          <quant>250 g</quant>
          <zutat>Weissmehl</zutat>
          <quant>200 g</quant>
          <zutat>gemahlener Rohzucker</zutat>
          <quant>2 EL</quant>
          <zutat>Lebkuchengewuerz</zutat>
          <quant>2 EL</quant>
          <zutat>Schokoladenpulver</zutat>
          <quant>1/2 TL</quant>
          <zutat>Backpulver</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
          <quant>2 EL</quant>
          <zutat>Wasser</zutat>
          <quant>1 EL</quant>
          <zutat>Kirsch</zutat>
          <quant>1 EL</quant>
          <zutat>Puderzucker</zutat>
          <quant>220 g</quant>
