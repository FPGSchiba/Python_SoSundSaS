       <Eiweiss>25 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Marinieren>
          <quant>1 TL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1 </quant>
          <zutat>Bio-Zitrone, nur abgerieben Schale</zutat>
          <quant>1 EL</quant>
          <zutat>Tequila</zutat>
          <quant>2 EL</quant>
          <zutat>Bier</zutat>
          <quant>1 </quant>
          <zutat>roter Chili entkernt, fein gehackt</zutat>
          <quant>24 </quant>
          <zutat>geschaelte rohe Crevettenschwaenze (Bio)</zutat>
          <quant>4 </quant>
          <zutat>lange Holzspiesschen</zutat>
          <quant>4 </quant>
          <zutat>Bundzwiebeln mit dem Gruen, laengs halbiert</zutat>
