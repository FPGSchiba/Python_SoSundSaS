<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>22 kcal </NaehrwertProPerson>
       <Fett>1 g   </Fett>
       <Kohlenhydrate>2 g   </Kohlenhydrate>
       <Eiweiss>1 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Kartoffeln>
          <quant>500 g</quant>
          <zutat>fest kochende Kartoffeln mit der Schale, in ca. 5 mm dicken Scheiben</zutat>
          <quant>1 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
      </Kartoffeln>
      <Belag     >
          <quant>100 g</quant>
          <zutat>Creme fraiche</zutat>
          <quant>100 g</quant>
          <zutat>geraeucherter Tofu, in Wuerfeli</zutat>
          <quant>1 </quant>
          <zutat>Bundzwiebel mit dem Gruen, in Ringen</zutat>
          <quant>1 EL</quant>
          <zutat>Thymianblaettchen</zutat>
          <quant> </quant>
          <zutat>Pfeffer nach Bedarf</zutat>
      </Belag     >
   </einkaufliste>
   <rezept>
      <Kartoffeln>
          <inhalt>Kartoffeln, Oel, Salz und Pfeffer in einer Schuessel mischen, auf einem mit Backpapier belegten Blech verteilen. </inhalt>
      </Kartoffeln>
      <Backen    >
          <inhalt>Ca. 25 Min. in der Mitte des auf 200 Grad vorgeheizten Ofens. Herausnehmen.</inhalt>
      </Backen    >
      <Belag     >
          <inhalt>Creme fraiche auf den Kartoffelscheiben verteilen. Tofu und Bundzwiebel darauflegen, Thymian und Pfeffer darueberstreuen.</inhalt>
      </Belag     >
      <Fertigbacken>
          <inhalt>Ca. 20 Min.                   </inhalt>
      </Fertigbacken>
   </rezept>
</Rezept>