<Rezept>
   <meta>
       <NaehrwertProPerson>360 kcal</NaehrwertProPerson>
       <Fett>11 g  </Fett>
       <Kohlenhydrate>44 g  </Kohlenhydrate>
       <Eiweiss>18 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Tofu      >
          <quant>1 EL</quant>
          <zutat>Sojasauce</zutat>
          <quant>1 EL</quant>
          <zutat>Sesam</zutat>
          <quant>1 TL</quant>
          <zutat>Ingwer, fein gerieben</zutat>
          <quant>260 g</quant>
          <zutat>Tofu, in Scheiben</zutat>
          <quant>wenig </quant>
          <zutat>Oel zum Braten</zutat>
      </Tofu      >
      <Sauce     >
          <quant>2 </quant>
          <zutat>Limetten, nur Saft</zutat>
          <quant>6 EL</quant>
          <zutat>Sojasauce</zutat>
          <quant>2 EL</quant>
          <zutat>Wasser</zutat>
          <quant>1 1/2 EL</quant>
          <zutat>grobkoerniger Rohzucker</zutat>
          <quant>4 </quant>
          <zutat>Knoblauchzehen, fein gehackt</zutat>
          <quant>2 </quant>
          <zutat>rote Chilis, entkernt, fein gehackt</zutat>
          <quant>2 EL</quant>
          <zutat>Koriander, fein geschnitten</zutat>
      </Sauce     >
      <Bowl      >
          <quant>150 g</quant>
          <zutat>Reis-Vermicelli</zutat>
          <quant> </quant>
          <zutat>Salzwasser, siedend</zutat>
          <quant>1 </quant>
          <zutat>Gurke, in feinen Streifen</zutat>
          <quant>1 </quant>
          <zutat>Rueebli, in feinen Streifen</zutat>
          <quant>2 </quant>
          <zutat>Baby-Salate, geviertelt</zutat>
          <quant>1/2 Bund</quant>
