   <einkaufliste>
      <Fleisch   >
          <quant>2 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>300 g</quant>
          <zutat>Hackfleisch (Rind und Schwein)</zutat>
          <quant>1 </quant>
          <zutat>Zwiebel, fein gehackt</zutat>
          <quant>1 </quant>
          <zutat>Knoblauchzehe, fein gehackt</zutat>
          <quant>1 </quant>
          <zutat>rote Peperoni, in Wuerfeli</zutat>
          <quant>2 </quant>
          <zutat>Tomaten, in Wuerfen</zutat>
          <quant>1 Dose</quant>
          <zutat>Maiskoerner (ca. 300 g), abgespuelt, abgetropft</zutat>
          <quant>100 g</quant>
          <zutat>eingelegte Jalapeños in Scheiben, abgetropft, in Scheiben</zutat>
          <quant>1 EL</quant>
          <zutat>glattblaettrige Petersilie, fein geschnitten</zutat>
          <quant>1 1/2 TL</quant>
          <zutat>Paprika</zutat>
          <quant>1/4 TL</quant>
          <zutat>Curry</zutat>
          <quant>1 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
      </Fleisch   >
      <Reis      >
          <quant>2 dl</quant>
          <zutat>Wasser</zutat>
