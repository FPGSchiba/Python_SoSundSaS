   </meta>
   <einkaufliste>
      <Marinierte_Pilze>
          <quant>500 g</quant>
          <zutat>gemischte  Pilze</zutat>
          <quant>80 ml</quant>
          <zutat>Sojasauce</zutat>
          <quant>1 TL</quant>
          <zutat>Ingwer, gerieben</zutat>
          <quant>1/2 TL</quant>
          <zutat>Curry</zutat>
          <quant>1/2 TL</quant>
          <zutat>Sambal Oelek</zutat>
          <quant>1 TL</quant>
          <zutat>Ahornsirup</zutat>
      </Marinierte_Pilze>
      <Suppe     >
          <quant>wenig </quant>
          <zutat>Oel</zutat>
          <quant>1 </quant>
          <zutat>rote Zwiebel, gehackt</zutat>
          <quant>4 EL</quant>
          <zutat>rote Currypaste (Naturaplan Curry Paste)</zutat>
          <quant>1 1/3 Liter</quant>
          <zutat>Gemuesebouillon</zutat>
          <quant>400 ml</quant>
          <zutat>Kokosmilch</zutat>
      </Suppe     >
      <Tofu,_Pilze_und_Nudeln>
          <quant>200 g</quant>
          <zutat>Tofu, in Scheiben</zutat>
          <quant>150 g</quant>
          <zutat>Reisnudeln (oder Ramen-Nudeln)</zutat>
          <quant>1/2 Bund</quant>
