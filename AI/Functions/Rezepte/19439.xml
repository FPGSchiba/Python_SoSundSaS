<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>510 kcal</NaehrwertProPerson>
       <Fett>25 g  </Fett>
       <Kohlenhydrate>20 g  </Kohlenhydrate>
       <Eiweiss>50 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Kirschen-Basilikumsalsa>
          <quant>1 </quant>
          <zutat>Limette, heiss abgespuelt, trocken getupft, wenig abgeriebene Schale und ganzer Saft</zutat>
          <quant>2 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>300 g</quant>
          <zutat>Kirschen, entsteint, halbiert</zutat>
          <quant>1 </quant>
          <zutat>Schalotte, fein gehackt</zutat>
          <quant>1 </quant>
          <zutat>Knoblauchzehe, fein gehackt</zutat>
          <quant>1/2 Bund</quant>
          <zutat>Basilikum, fein geschnitten</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
      </Kirschen-Basilikumsalsa>
      <Pulpo_marinieren>
          <quant>2 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>3/4 TL</quant>
          <zutat>geraeucherter Paprika </zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
          <quant>8 </quant>
          <zutat>vorgegarte Pulpo-Tentakel</zutat>
      </Pulpo_marinieren>
      <Grillieren_(Holzkohle-,_Gas-,_Elektrogrill)>
          <quant>400 g</quant>
          <zutat>Pimientos de Padrón</zutat>
          <quant>1 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1/2 TL</quant>
          <zutat>Fleur de Sel</zutat>
      </Grillieren_(Holzkohle-,_Gas-,_Elektrogrill)>
   </einkaufliste>
   <rezept>
      <Kirschen-Basilikumsalsa>
          <inhalt>Limettenschale und -saft mit dem Oel verruehren. Kirschen, Schalotte, Knoblauch und Basilikum daruntermischen, wuerzen. </inhalt>
      </Kirschen-Basilikumsalsa>
      <Pulpo_marinieren>
          <inhalt>Oel, Paprika und Pfeffer verruehren. Pulpo-Tenktakeln damit einreiben. </inhalt>
      </Pulpo_marinieren>
      <Grillieren_(Holzkohle-,_Gas-,_Elektrogrill)>
          <inhalt>Pulpo-Tentakeln ueber mittelstarker Glut/ auf mittlerer Stufe (ca. 200 Grad) zugedeckt ca. 10 Min. grillieren, von Zeit zu Zeit wenden. Pimientos mit Oel bestreichen, ca. 10 Min. mitgrillieren. Pulpo und Pimientos salzen, mit der Kirschen-Basilikumsalsa servieren.</inhalt>
      </Grillieren_(Holzkohle-,_Gas-,_Elektrogrill)>
   </rezept>
</Rezept>