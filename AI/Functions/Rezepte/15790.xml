          <quant>1 Dose</quant>
          <zutat>Kichererbsen (ca. 420 g), abgespuelt, abgetropft</zutat>
          <quant>50 g</quant>
          <zutat>Baumnusskerne</zutat>
          <quant>4 EL</quant>
          <zutat>Panko</zutat>
          <quant>1/4 TL</quant>
          <zutat>Kreuzkuemmelpulver</zutat>
          <quant>1/4 TL</quant>
          <zutat>Chiliflocken</zutat>
