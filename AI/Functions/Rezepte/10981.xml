   </meta>
   <einkaufliste>
      <Salat     >
          <quant>5 dl</quant>
          <zutat>Gemuesebouillon</zutat>
          <quant>200 g</quant>
          <zutat>Quinoa</zutat>
          <quant>1 </quant>
          <zutat>Avocado in, Wuerfeli</zutat>
          <quant>300 g</quant>
          <zutat>Cherry-Rispentomaten, evtl. halbiert</zutat>
          <quant>200 g</quant>
          <zutat>Heidelbeeren</zutat>
          <quant>2 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1 </quant>
