          <quant>1/2 TL</quant>
          <zutat>Salz</zutat>
      </Salat     >
      <Crevetten >
          <quant>8 </quant>
          <zutat>geschaelte rohe Crevettenschwaenze (Bio)</zutat>
          <quant>1 </quant>
          <zutat>roter Peperoncino, entkernt, in Ringen</zutat>
          <quant>1 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1 TL</quant>
