       <Eiweiss>17 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Fusilli_und_Erbsli>
          <quant>250 g</quant>
          <zutat>Teigwaren (z.B. Karma Fusilli aus gruenen Erbsen)</zutat>
          <quant> </quant>
          <zutat>Salzwasser, siedend</zutat>
          <quant>200 g</quant>
          <zutat>tiefgekuehlte Erbsli</zutat>
          <quant>1 EL</quant>
          <zutat>Sesamoel</zutat>
      </Fusilli_und_Erbsli>
      <Restliche_Zutaten>
          <quant>200 g</quant>
          <zutat>Erdbeeren, in Stuecken</zutat>
          <quant>1/2 </quant>
          <zutat>Gurke, in Wuerfeln</zutat>
          <quant>1 </quant>
          <zutat>roter Chili, entkernt, fein gehackt</zutat>
          <quant>1 Bund</quant>
          <zutat>Pfefferminze, fein geschnitten</zutat>
          <quant>2 EL</quant>
          <zutat>Sesamoel</zutat>
          <quant>2 EL</quant>
          <zutat>Aceto balsamico</zutat>
          <quant> </quant>
          <zutat>Salz, nach Bedarf</zutat>
          <quant>4 EL</quant>
          <zutat>Mandelblaettchen, geroestet</zutat>
