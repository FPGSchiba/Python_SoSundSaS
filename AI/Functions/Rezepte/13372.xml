<Rezept>
   <meta>
       <NaehrwertProPerson>491 kcal</NaehrwertProPerson>
       <Fett>28 g  </Fett>
       <Kohlenhydrate>24 g  </Kohlenhydrate>
       <Eiweiss>35 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Kraeuteroel >
          <quant>3/4 dl</quant>
          <zutat>Olivenoel</zutat>
          <quant>1 </quant>
          <zutat>Schalotte, in feinen Scheiben</zutat>
          <quant>1 </quant>
          <zutat>Knoblauchzehe, in feinen Scheiben</zutat>
          <quant>2 EL</quant>
          <zutat>Estragon, fein geschnitten</zutat>
          <quant>2 EL</quant>
          <zutat>glattblaettrige Petersilie, fein geschnitten</zutat>
          <quant>4 </quant>
          <zutat>getrocknete Tomaten, fein gehackt</zutat>
      </Kraeuteroel >
      <Fisch     >
          <quant>2 </quant>
          <zutat>Doraden Royale (ca. 600 g), vom Fischhaendler filetiert, Haut entfernt</zutat>
          <quant>1/2 TL</quant>
          <zutat>Salz</zutat>
      </Fisch     >
      <Brot_     >
