   </meta>
   <einkaufliste>
      <Sauce     >
          <quant>1 </quant>
          <zutat>Bio-Zitrone, abgeriebene Schale und Saft</zutat>
          <quant>3 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1 </quant>
          <zutat>roter Peperoncino, entkernt, fein gehackt</zutat>
          <quant>1/2 TL</quant>
          <zutat>Salz</zutat>
      </Sauce     >
      <Gemuese_   >
          <quant>1 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>500 g</quant>
          <zutat>Bohnen, halbiert</zutat>
          <quant>3 EL</quant>
          <zutat>Wasser</zutat>
          <quant>300 g</quant>
          <zutat>Zucchetti, laengs halbiert, schraeg in Scheibchen</zutat>
          <quant>3/4 TL</quant>
          <zutat>Salz</zutat>
      </Gemuese_   >
      <Servieren >
          <quant>1/2 </quant>
          <zutat>Kopfsalat, in Streifen</zutat>
          <quant>200 g</quant>
          <zutat>Feta, zerbroeckelt</zutat>
          <quant>3 EL</quant>
