          <quant>300 g</quant>
          <zutat>Rueebli, laengs geviertelt</zutat>
          <quant>300 g</quant>
          <zutat>Suesskartoffeln, laengs halbiert, in Scheiben</zutat>
          <quant>300 g</quant>
          <zutat>rohe Randen, gesechstelt</zutat>
          <quant>300 g</quant>
          <zutat>Petersilienwurzel, schraeg in Scheiben</zutat>
          <quant>1/2 Bund</quant>
          <zutat>Thymian</zutat>
          <quant>2 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1 TL</quant>
          <zutat>Salz</zutat>
      </Wintergemuese>
      <Sauce     >
          <quant>1 EL</quant>
          <zutat>grobkoerniger Senf</zutat>
          <quant>2 EL</quant>
          <zutat>Zitronensaft</zutat>
          <quant>2 EL</quant>
