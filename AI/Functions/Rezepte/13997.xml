      <Poulet    >
          <quant> </quant>
          <zutat>Oel zum Braten</zutat>
          <quant>2 </quant>
          <zutat>Pouletbruestli, in Wuerfeln</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
