          <zutat>Apfelsaft</zutat>
          <quant>150 g</quant>
          <zutat>Knollensellerie, in kleinen Stuecken</zutat>
          <quant>1 </quant>
          <zutat>Apfel, geschaelt, in  kleinen Stuecken</zutat>
          <quant>150 g</quant>
          <zutat>griechischer Jogurt nature nature</zutat>
