   <einkaufliste>
      <Hefeteig  >
          <quant>300 g</quant>
          <zutat>Weissmehl</zutat>
          <quant>3/4 TL</quant>
          <zutat>Salz</zutat>
          <quant>2 1/2 EL</quant>
          <zutat>Zucker</zutat>
          <quant>1/4 Wuerfel</quant>
          <zutat>Hefe (ca. 10 g), zerbroeckelt</zutat>
          <quant>30 g</quant>
          <zutat>Butter, weich, in Stuecken</zutat>
          <quant>1 dl</quant>
