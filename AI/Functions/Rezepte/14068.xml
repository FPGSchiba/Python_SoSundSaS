       <Eiweiss>26 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Tofu_braten>
          <quant>600 g</quant>
          <zutat>Tofu, in ca. 2 cm grossen Wuerfeln</zutat>
          <quant>1 TL</quant>
          <zutat>Salz</zutat>
          <quant>3 EL</quant>
          <zutat>Weissmehl</zutat>
          <quant>1 </quant>
          <zutat>Ei, verklopft</zutat>
          <quant>80 g</quant>
          <zutat>Sesam</zutat>
          <quant> </quant>
          <zutat>Bratbutter zum Braten</zutat>
      </Tofu_braten>
      <Salat     >
          <quant>6 </quant>
          <zutat>Chicoree, in Sechsteln</zutat>
          <quant>4 EL</quant>
          <zutat>Rapsoel</zutat>
          <quant>3 EL</quant>
          <zutat>Aceto balsamico bianco</zutat>
          <quant>2 </quant>
