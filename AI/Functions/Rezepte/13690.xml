<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>267 kcal</NaehrwertProPerson>
       <Fett>15 g  </Fett>
       <Kohlenhydrate>7 g   </Kohlenhydrate>
       <Eiweiss>26 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Beeren-Sauce_>
          <quant>100 g</quant>
          <zutat>Beeren (z.B. Himbeeren, Johannisbeeren, Heidelbeeren)</zutat>
          <quant>2 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>2 TL</quant>
          <zutat>Crema di Balsamico</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
          <quant>1/2 </quant>
          <zutat>Bio-Zitrone, abgeriebene Schale und 1 EL Saft</zutat>
      </Beeren-Sauce_>
      <Salat     >
          <quant>20 g</quant>
          <zutat>ungesalzene geschaelte Pistazien</zutat>
          <quant>50 g</quant>
          <zutat>Beeren (z.B. Himbeeren, Johannisbeeren, Heidelbeeren)</zutat>
          <quant>25 g</quant>
          <zutat>Rucola</zutat>
      </Salat     >
      <Fleisch   >
          <quant>400 g</quant>
          <zutat>Rindshuft am Stueck</zutat>
      </Fleisch   >
      <Anrichten >
          <quant>25 g</quant>
          <zutat>Parmesan</zutat>
          <quant>wenig </quant>
          <zutat>gemischte Pfefferkoerner</zutat>
          <quant>1/2 TL</quant>
          <zutat>Fleur de Sel</zutat>
      </Anrichten >
   </einkaufliste>
   <rezept>
      <How_To    >
          <inhalt>Beeren-Sauce                  </inhalt>
      </How_To    >
      <Beeren-Sauce_>
          <inhalt>Beeren und alle Zutaten bis und mit Salz mischen, 1/2 Zitronenschale dazureiben, 1 EL Saft beigeben. </inhalt>
      </Beeren-Sauce_>
      <How_To1   >
          <inhalt>Beeren mit der Gabel leicht zerdruecken. </inhalt>
      </How_To1   >
      <How_To2   >
          <inhalt>Salat                         </inhalt>
      </How_To2   >
      <How_To3   >
          <inhalt>Pistazien, Beeren und Rucola in eine Schuessel geben. </inhalt>
      </How_To3   >
      <Salat     >
          <inhalt>Fleisch in Klarsichtfolie einpacken, ca. 30 Min. anfrieren. Angefrorenes Fleisch in hauchduenne Tranchen schneiden. </inhalt>
      </Salat     >
      <Fleisch   >
          <inhalt>Salat auf dem Fleisch verteilen, Beeren-Sauce daruebertraeufeln. </inhalt>
      </Fleisch   >
      <Anrichten >
          <inhalt>Parmesan mit dem Sparschaeler in duenne Streifen schaelen, auf dem Salat verteilen. Pfefferkoerner zerstossen, Salat wuerzen. </inhalt>
      </Anrichten >
   </rezept>
</Rezept>