<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>154 kcal</NaehrwertProPerson>
       <Fett>8 g   </Fett>
       <Kohlenhydrate>5 g   </Kohlenhydrate>
       <Eiweiss>13 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Dressing  >
          <quant>1/2 dl</quant>
          <zutat>Randensaft</zutat>
          <quant>1 EL</quant>
          <zutat>Zitronensaft</zutat>
          <quant>2 EL</quant>
          <zutat>Mayonnaise</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
      </Dressing  >
      <Salat     >
          <quant>1/2 </quant>
          <zutat>Gurke, entkernt, in Scheiben</zutat>
          <quant>150 g</quant>
          <zutat>Jungspinat</zutat>
          <quant>150 g</quant>
          <zutat>Brombeeren, halbiert</zutat>
          <quant>200 g</quant>
          <zutat>geraeucherte Forellenfilets (Bio), zerzupft</zutat>
      </Salat     >
   </einkaufliste>
   <rezept>
      <Dressing  >
          <inhalt>Randensaft und alle Zutaten bis und mit Mayonnaise puerieren, salzen, beiseite stellen.</inhalt>
      </Dressing  >
      <Salat     >
          <inhalt>Gurke, Spinat, Brombeeren und Forelle  anrichten. Sauce daruebertraeufeln.</inhalt>
      </Salat     >
   </rezept>
</Rezept>