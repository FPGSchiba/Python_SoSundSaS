<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>751 kcal</NaehrwertProPerson>
       <Fett>39 g  </Fett>
       <Kohlenhydrate>71 g  </Kohlenhydrate>
       <Eiweiss>18 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Flammkuchen>
          <quant>1 Rolle</quant>
          <zutat>ausgewallter Flammkuchenteig (ca. 24 x 33 cm)</zutat>
          <quant>125 g</quant>
          <zutat>Frischkaese</zutat>
          <quant>1/2 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
          <quant>5 </quant>
          <zutat>Aprikosen, geviertelt</zutat>
          <quant>80 g</quant>
          <zutat>Bratspeck in Tranchen,  gedrittelt</zutat>
      </Flammkuchen>
   </einkaufliste>
   <rezept>
      <Flammkuchen>
          <inhalt>Teig mit dem Backpapier auf ein Blech ziehen, mit Frischkaese bestreichen, wuerzen. Aprikosen und Speck darauf verteilen.</inhalt>
      </Flammkuchen>
      <Backen    >
          <inhalt>Ca. 20 Min. im auf 220 Grad vorgeheizten Ofen (Heissluft). Sofort servieren.</inhalt>
      </Backen    >
   </rezept>
</Rezept>