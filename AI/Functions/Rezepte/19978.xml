<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>91 kcal </NaehrwertProPerson>
       <Fett>3 g   </Fett>
       <Kohlenhydrate>15 g  </Kohlenhydrate>
       <Eiweiss>2 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Kaffee    >
          <quant>4 EL</quant>
          <zutat>sofort loesliches Kaffeepulver</zutat>
          <quant>4 EL</quant>
          <zutat>Zucker</zutat>
          <quant>3 EL</quant>
          <zutat>Wasser, heiss</zutat>
      </Kaffee    >
      <Milch_    >
          <quant>2 1/2 dl</quant>
          <zutat>Vollmilch</zutat>
      </Milch_    >
   </einkaufliste>
   <rezept>
      <Kaffee    >
          <inhalt>Kaffee, Zucker und Wasser in einen Messbecher geben, mit den Schwingbesen des Mixer ca. 10 Min. steif schlagen. </inhalt>
      </Kaffee    >
      <Milch_    >
          <inhalt>Milch mit dem Milchschaeumer kalt oder warm schaumig schlagen, in 4 Glaeser verteilen. Kaffeeschaum darauf verteilen. </inhalt>
      </Milch_    >
   </rezept>
</Rezept>