<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>474 kcal</NaehrwertProPerson>
       <Fett>26 g  </Fett>
       <Kohlenhydrate>54 g  </Kohlenhydrate>
       <Eiweiss>6 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Smoothie_Bowl>
          <quant>2 </quant>
          <zutat>Bananen, reif, in Stuecken, tiefgekuehlt</zutat>
          <quant>300 g</quant>
          <zutat>Heidelbeeren oder Blaubeeren, frisch oder tiefgekuehlt</zutat>
          <quant>300 g</quant>
          <zutat>Kokosnussmilch-Jogurt (z.B. KARMA Natural Jacos)</zutat>
          <quant>1 TL</quant>
          <zutat>Ahornsirup</zutat>
          <quant>1 TL</quant>
          <zutat>Vanillepaste</zutat>
          <quant>5 </quant>
          <zutat>Eiswuerfel</zutat>
      </Smoothie_Bowl>
      <Topping   >
          <quant>2 EL</quant>
          <zutat>Knuspermueesli (z.B. KARMA Blueberry Chia Granola)</zutat>
          <quant>10 g</quant>
          <zutat>dunkle Schokolade, gehackt</zutat>
          <quant>20 g</quant>
          <zutat>Heidelbeeren oder Blaubeeren, frisch oder tiefgekuehlt</zutat>
          <quant>1 EL</quant>
          <zutat>Kokosnussmilch-Jogurt</zutat>
      </Topping   >
   </einkaufliste>
   <rezept>
      <Smoothie_Bowl>
          <inhalt>Bananen ca. 5 Min. vor Gebrauch aus dem Tiefkuehler nehmen, mit allen restlichen Zutaten im Cutter/Blender fein puerieren und in Bowls geben. </inhalt>
      </Smoothie_Bowl>
      <Topping   >
          <inhalt>Alle Zutaten auf den Bowls verteilen, sofort servieren.</inhalt>
      </Topping   >
   </rezept>
</Rezept>