<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>520 kcal</NaehrwertProPerson>
       <Fett>28 g  </Fett>
       <Kohlenhydrate>33 g  </Kohlenhydrate>
       <Eiweiss>26 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Linsen_kochen>
          <quant>160 g</quant>
          <zutat>gelbe Linsen</zutat>
          <quant> </quant>
          <zutat>Wasser, siedend</zutat>
          <quant>500 g</quant>
          <zutat>Stangensellerie, schraeg in ca. 5 mm dicken Scheiben</zutat>
      </Linsen_kochen>
      <Sauce     >
          <quant>2 EL</quant>
          <zutat>Himbeeressig</zutat>
          <quant>4 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1 Bund</quant>
          <zutat>Pfefferminze, in feinen Streifen</zutat>
          <quant>1 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
      </Sauce     >
      <Gemuese    >
          <quant>250 g</quant>
          <zutat>Bundrueebli, laengs in feinen Scheiben</zutat>
          <quant>300 g</quant>
          <zutat>Aprikosen, in Schnitzchen</zutat>
          <quant>1 </quant>
          <zutat>Bundzwiebel mit dem Gruen, in feinen Ringen</zutat>
      </Gemuese    >
      <Anrichten >
          <quant>2 Beutel</quant>
          <zutat>Mozzarella-Mini-Kugeln (je ca. 120 g), abgetropft</zutat>
          <quant>3 EL</quant>
          <zutat>Pinienkerne, geroestet</zutat>
      </Anrichten >
   </einkaufliste>
   <rezept>
      <Linsen_kochen>
          <inhalt>Linsen ca. 6 Min. kochen. Stangensellerie beigeben, ca. 2 Min. fertig kochen. Linsen abtropfen, kalt abspuelen.</inhalt>
      </Linsen_kochen>
      <Sauce     >
          <inhalt>Essig und alle Zutaten bis und mit Pfeffer in einer Schuessel verruehren, Linsen beigeben.</inhalt>
      </Sauce     >
      <Gemuese    >
          <inhalt>Rueebli, Aprikosen und Bundzwiebel mit den Linsen in Bowls anrichten.</inhalt>
      </Gemuese    >
      <Anrichten >
          <inhalt>Mozzarella und Pinienkerne darauf verteilen.</inhalt>
      </Anrichten >
   </rezept>
</Rezept>