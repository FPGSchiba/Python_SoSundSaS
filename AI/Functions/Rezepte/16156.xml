   <einkaufliste>
      <Chimichurri-Sauce>
          <quant>3 EL</quant>
          <zutat>Rotweinessig</zutat>
          <quant>6 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1 </quant>
          <zutat>Knoblauchzehe</zutat>
          <quant>1 </quant>
          <zutat>roter Chili, entkernt</zutat>
          <quant>1/2 Bund</quant>
          <zutat>Koriander, Blaetter abgezupft</zutat>
          <quant>1/2 Bund</quant>
          <zutat>glattblaettrige Petersilie, Blaetter abgezupft</zutat>
