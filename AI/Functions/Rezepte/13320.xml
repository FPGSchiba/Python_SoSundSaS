<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>339 kcal</NaehrwertProPerson>
       <Fett>12 g  </Fett>
       <Kohlenhydrate>42 g  </Kohlenhydrate>
       <Eiweiss>11 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Kartoffeln>
          <quant>500 g</quant>
          <zutat>Baby-Kartoffeln</zutat>
          <quant> </quant>
          <zutat>Salzwasser, siedend</zutat>
          <quant>500 g</quant>
          <zutat>gruene Spargeln, unterer hoelzerner Teil abgeschnitten, schraeg in ca. 3 cm langen Stuecken</zutat>
      </Kartoffeln>
      <Vinaigrette>
          <quant>2 EL</quant>
          <zutat>grobkoerniger Senf</zutat>
          <quant>4 EL</quant>
          <zutat>Aceto balsamico bianco</zutat>
          <quant>3 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>2 EL</quant>
          <zutat>Gemuesebouillon</zutat>
          <quant>1 EL</quant>
          <zutat>Honig</zutat>
          <quant>3 EL</quant>
          <zutat>Petersilie, fein geschnitten</zutat>
          <quant>1/2 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
      </Vinaigrette>
      <Salat     >
          <quant>1 Bund</quant>
          <zutat>Radiesli, in feinen Scheiben</zutat>
          <quant>1 Dose</quant>
          <zutat>Kichererbsen (ca. 410 g), abgespuelt, abgetropft</zutat>
          <quant>50 g</quant>
          <zutat>Rettichsprossen</zutat>
      </Salat     >
   </einkaufliste>
   <rezept>
      <Kartoffeln>
          <inhalt>Kartoffeln in Salzwasser ca. 20 Min. kochen. Waehrend den letzten 3 Min. die Spargeln mitkochen. Abtropfen, kurz kalt abspuelen.</inhalt>
      </Kartoffeln>
      <Vinaigrette>
          <inhalt>Senf und alle Zutaten bis und mit Pfeffer in einer grossen Schuessel verruehren. </inhalt>
      </Vinaigrette>
      <Salat     >
          <inhalt>Kartoffeln, Spargeln, Radiesli, Kichererbsen und Sprossen zur Vinaigrette geben, mischen. </inhalt>
      </Salat     >
   </rezept>
