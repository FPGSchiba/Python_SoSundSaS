<Rezept>
   <meta>
       <NaehrwertProPerson>218 kcal</NaehrwertProPerson>
       <Fett>13 g  </Fett>
       <Kohlenhydrate>20 g  </Kohlenhydrate>
       <Eiweiss>4 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Fuellung_  >
          <quant>50 g</quant>
          <zutat>Caramel-Bonbons (z.B. Toffifee, fein gehackt)</zutat>
          <quant>50 g</quant>
          <zutat>gebrannte Mandeln, fein gehackt</zutat>
          <quant>50 g</quant>
          <zutat>Butter, weich</zutat>
      </Fuellung_  >
      <Schnecken_>
          <quant>1 </quant>
          <zutat>rund ausgewallter Pizzateig  (ca. 260 g)</zutat>
          <quant>10 g</quant>
          <zutat>Butter, fluessig</zutat>
      </Schnecken_>
