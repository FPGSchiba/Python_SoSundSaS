       <Kohlenhydrate>88 g  </Kohlenhydrate>
       <Eiweiss>30 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Pizza     >
          <quant>1 </quant>
          <zutat>rund ausgewallter Pizzateig </zutat>
          <quant>130 g</quant>
          <zutat>geriebener Gruyere</zutat>
          <quant>1 </quant>
          <zutat>roter Chicoree (Radicchio), in feinen Streifen</zutat>
          <quant>1 </quant>
          <zutat>Birne, in feinen Schnitzen</zutat>
          <quant>wenig </quant>
          <zutat>Salz, Pfeffer, nach Bedarf</zutat>
      </Pizza     >
