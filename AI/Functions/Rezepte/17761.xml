<Rezept>
   <meta>
       <NaehrwertProPerson>734 kcal</NaehrwertProPerson>
       <Fett>48 g  </Fett>
       <Kohlenhydrate>26 g  </Kohlenhydrate>
       <Eiweiss>46 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Gemuese    >
          <quant>400 g</quant>
          <zutat>Kartoffeln festkochend</zutat>
          <quant>500 g</quant>
          <zutat>Kohlrabi</zutat>
      </Gemuese    >
      <Gratin    >
          <quant>200 g</quant>
          <zutat>Saucen-Halbrahm</zutat>
          <quant>2 dl</quant>
          <zutat>Vollmilch</zutat>
          <quant>130 g</quant>
          <zutat>geriebener Sbrinz</zutat>
          <quant>1 EL</quant>
          <zutat>Thymianblaettchen</zutat>
          <quant>2 </quant>
          <zutat>Knoblauchzehen</zutat>
          <quant>1 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
      </Gratin    >
      <Medaillons>
          <quant>1 EL</quant>
          <zutat>Bratbutter</zutat>
          <quant>8 </quant>
          <zutat>Schweinsmedaillons (je ca. 70 g)</zutat>
          <quant>1/2 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
          <quant>1 Bund</quant>
          <zutat>Petersilie</zutat>
          <quant>40 g</quant>
          <zutat>Butter, weich</zutat>
          <quant>2 EL</quant>
          <zutat>gemahlene Haselnuesse</zutat>
          <quant>2 EL</quant>
