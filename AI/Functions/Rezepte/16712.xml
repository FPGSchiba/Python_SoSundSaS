<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>790 kcal</NaehrwertProPerson>
       <Fett>49 g  </Fett>
       <Kohlenhydrate>71 g  </Kohlenhydrate>
       <Eiweiss>3 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Geroestete_Zitronen>
          <quant>1 </quant>
          <zutat>Bio-Zitrone, in ca. 2 mm dicken Scheiben, entkernt</zutat>
          <quant>3 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>1/4 TL</quant>
          <zutat>grobkoerniges Meersalz</zutat>
      </Geroestete_Zitronen>
      <Salat     >
          <quant>300 g</quant>
          <zutat>Pasta (z.B. Orzo, Risoni oder Bagos)</zutat>
          <quant> </quant>
          <zutat>Salzwasser, siedend</zutat>
          <quant>3 </quant>
          <zutat>Nektarinen, in Schnitzen</zutat>
          <quant>400 g</quant>
          <zutat>Cherry-Tomaten, halbiert</zutat>
          <quant>1 Bund</quant>
          <zutat>Basilikum, grob geschnitten</zutat>
      </Salat     >
      <Dressing  >
          <quant>2 EL</quant>
          <zutat>Sherry-Essig</zutat>
          <quant>1 EL</quant>
          <zutat>Zitronensaft</zutat>
          <quant>4 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>2 TL</quant>
          <zutat>fluessiger Honig oder Granatapfelmelasse *</zutat>
          <quant> </quant>
          <zutat>Salz, Pfeffer, nach Bedarf</zutat>
      </Dressing  >
      <Garnitur  >
          <quant>125 g</quant>
          <zutat>Mozzarella di bufala, zerzupft</zutat>
          <quant>50 g</quant>
          <zutat>Rucola</zutat>
      </Garnitur  >
   </einkaufliste>
   <rezept>
      <Geroestete_Zitronen>
          <inhalt>Zitronen auf einem mit Backpapier belegten Blech verteilen, mit Oel betraeufeln, salzen.</inhalt>
      </Geroestete_Zitronen>
      <Backen/roesten>
          <inhalt>Ca. 15 Min. in der Mitte des auf 200 Grad vorgeheizten Ofens. Herausnehmen, auskuehlen, grob hacken.</inhalt>
      </Backen/roesten>
      <Salat     >
          <inhalt>Pasta im siedenden Salzwasser al dente kochen, kalt abspuelen, auskuehlen. Nektarinen, Tomaten und Basilikum mit der Pasta und den Zitronen in einer grossen Schuessel mischen.</inhalt>
      </Salat     >
      <Dressing  >
          <inhalt>Essig, Zitronensaft, Oel und Honig verruehren, wuerzen. 2/3 vom Dressing zum Salat geben, mischen.</inhalt>
      </Dressing  >
      <Garnitur  >
          <inhalt>Mozzarella und Rucola auf dem Salat verteilen, restliches Dressing daruebertraeufeln.</inhalt>
      </Garnitur  >
   </rezept>
</Rezept>