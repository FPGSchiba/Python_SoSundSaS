   <einkaufliste>
      <Gemuesecurry>
          <quant>1 EL</quant>
          <zutat>Kokosoel</zutat>
          <quant>2 </quant>
          <zutat>rote Zwiebeln, in feinen Streifen</zutat>
          <quant>3 cm</quant>
          <zutat>Ingwer, fein gerieben</zutat>
          <quant>2 EL</quant>
          <zutat>scharfer Curry</zutat>
          <quant>600 g</quant>
          <zutat>Suesskartoffeln, in ca. 1 cm grossen Wuerfeln</zutat>
      </Gemuesecurry>
      <Currysauce>
          <quant>4 dl</quant>
          <zutat>Gemuesebouillon</zutat>
          <quant>2 1/2 dl</quant>
          <zutat>Kokosmilch</zutat>
          <quant>1 Dose</quant>
          <zutat>Kichererbsen (ca. 410 g), abgespuelt, abgetropft</zutat>
          <quant>2 EL</quant>
          <zutat>Koriander, grob geschnitten</zutat>
          <quant> </quant>
          <zutat>Salz, nach Bedarf</zutat>
      </Currysauce>
      <Gebratene_Bananen>
          <quant>1 EL</quant>
          <zutat>Kokosoel</zutat>
          <quant>2 </quant>
