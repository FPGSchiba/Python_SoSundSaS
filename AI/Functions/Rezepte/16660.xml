<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>57 kcal </NaehrwertProPerson>
       <Fett>2 g   </Fett>
       <Kohlenhydrate>7 g   </Kohlenhydrate>
       <Eiweiss>2 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Teig      >
          <quant>1 </quant>
          <zutat>Apfel, fein gerieben</zutat>
          <quant>100 g</quant>
          <zutat>feine Vollkorn-Haferflocken</zutat>
          <quant>70 g</quant>
          <zutat>Erdnussbutter</zutat>
          <quant>60 g</quant>
          <zutat>Zucker</zutat>
          <quant>2 Prisen</quant>
          <zutat>Salz</zutat>
      </Teig      >
   </einkaufliste>
   <rezept>
      <Teig      >
          <inhalt>Apfel mit Haferflocken, Erdnussbutter und Zucker mischen. Mit nassen Haenden 12 Kugeln formen, auf ein mit Backpapier belegtes Blech legen. Kugeln flach druecken (ca. 6 cm Ø).</inhalt>
      </Teig      >
      <Backen    >
          <inhalt>Ca. 15 Min. im auf 200 Grad vorgeheizten Ofen (Heissluft). </inhalt>
      </Backen    >
   </rezept>
</Rezept>