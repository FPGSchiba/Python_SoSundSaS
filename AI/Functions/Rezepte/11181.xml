<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>460 kcal</NaehrwertProPerson>
       <Fett>31 g  </Fett>
       <Kohlenhydrate>4 g   </Kohlenhydrate>
       <Eiweiss>41 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Speckzwiebeln_und_Dip>
          <quant>1 </quant>
          <zutat>Zwiebel, in 8 grossen ca.5 mm dicken Ringen, Rest fein gehackt</zutat>
          <quant>8 Tranchen</quant>
          <zutat>Bratspeck</zutat>
          <quant>150 g</quant>
          <zutat>Rahmquark</zutat>
          <quant>30 g</quant>
          <zutat>getrocknete Tomaten in Oel, abgetropft, fein geschnitten</zutat>
          <quant>1 </quant>
          <zutat>Knoblauchzehe, gepresst</zutat>
          <quant>1/2 EL</quant>
          <zutat>Rosmarin, fein geschnitten</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
      </Speckzwiebeln_und_Dip>
      <Holzkohle-/Gas-/Elektrogrill:_>
          <quant>4 </quant>
          <zutat>Schweinskoteletts (je ca. 200 g)</zutat>
          <quant>1 TL</quant>
          <zutat>Salz</zutat>
      </Holzkohle-/Gas-/Elektrogrill:_>
   </einkaufliste>
   <rezept>
      <Speckzwiebeln_und_Dip>
          <inhalt>Zwiebelringe mit dem Speck umwickeln. Gehackte Zwiebeln, Quark und alle Zutaten bis und mit Rosmarin verruehren, wuerzen.</inhalt>
      </Speckzwiebeln_und_Dip>
      <Holzkohle-/Gas-/Elektrogrill:_>
          <inhalt>Zwiebelringe ueber mittelstarker Glut / auf mittlerer Stufe (ca. 200 Grad) rundum ca. 6 Min. grillieren. Koteletts salzen, beidseitig je ca. 5 Min. mit-grillieren</inhalt>
      </Holzkohle-/Gas-/Elektrogrill:_>
   </rezept>
</Rezept>