       <Eiweiss>9 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Tofu_marinieren_>
          <quant>2 EL</quant>
          <zutat>Kokosflocken</zutat>
          <quant>2 EL</quant>
          <zutat>Sojasauce</zutat>
          <quant>1 EL</quant>
          <zutat>Ahornsirup</zutat>
          <quant>2 TL</quant>
          <zutat>Sriracha-Sauce</zutat>
          <quant>1 EL</quant>
          <zutat>Limettensaft</zutat>
          <quant>1 </quant>
          <zutat>Knoblauchzehe, gepresst</zutat>
          <quant>220 g</quant>
          <zutat>Tofu (z.B. mit Ingwer), in Wuerfeln</zutat>
      </Tofu_marinieren_>
      <Sauce     >
          <quant>2 TL</quant>
          <zutat>Limettensaft</zutat>
          <quant>2 TL</quant>
          <zutat>Sesamoel</zutat>
          <quant>2 EL</quant>
          <zutat>Sojasauce</zutat>
          <quant>2 TL</quant>
          <zutat>Ahornsirup</zutat>
          <quant>1 EL</quant>
          <zutat>Sesam, geroestet</zutat>
          <quant>1 EL</quant>
          <zutat>Koriander, fein geschnitten</zutat>
      </Sauce     >
      <Frittieren>
          <quant> </quant>
