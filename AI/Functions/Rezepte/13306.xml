       <Eiweiss>24 g  </Eiweiss>
   </meta>
   <einkaufliste>
      <Orecchiette_>
          <quant>500 g</quant>
          <zutat>Orecchiette </zutat>
          <quant> </quant>
          <zutat>Salzwasser, siedend</zutat>
      </Orecchiette_>
      <Artischocken_>
          <quant>4 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>3 </quant>
          <zutat>Knoblauchzehen, in Scheiben</zutat>
          <quant>1 </quant>
          <zutat>roter Peperoncino, entkernt, in feinen Ringen</zutat>
          <quant>300 g</quant>
          <zutat>Artischockenherzen in Oel, abgetropft, geachtelt</zutat>
          <quant>1 </quant>
          <zutat>Bio-Zitrone, nur abgeriebene Schale</zutat>
          <quant>1/2 Bund</quant>
