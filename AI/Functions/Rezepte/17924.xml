          <quant>200 g</quant>
          <zutat>Jungspinat</zutat>
          <quant>1 EL</quant>
          <zutat>Butter</zutat>
          <quant> </quant>
          <zutat>Salz, Pfeffer, nach Bedarf</zutat>
      </Spinat-Reis>
      <Fisch_braten>
          <quant>4 </quant>
          <zutat>Goldbuttfilets (MSC) (je ca. 150 g)</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
          <quant>wenig </quant>
          <zutat>Weissmehl</zutat>
