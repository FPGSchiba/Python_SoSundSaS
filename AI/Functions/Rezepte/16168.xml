<Rezept>
   <meta>
       <NaehrwertProPerson>149 kcal</NaehrwertProPerson>
       <Fett>5 g   </Fett>
       <Kohlenhydrate>20 g  </Kohlenhydrate>
       <Eiweiss>5 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Pizzette  >
          <quant>800 g</quant>
          <zutat>Pizzateig</zutat>
          <quant>2 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>5 EL</quant>
          <zutat>geriebener Parmesan</zutat>
          <quant>150 g</quant>
          <zutat>Mozzarella, in Wuerfeli</zutat>
          <quant>1 EL</quant>
          <zutat>Oreganoblaettchen, fein geschnitten</zutat>
          <quant>1/4 TL</quant>
          <zutat>Fleur de Sel</zutat>
          <quant>wenig </quant>
