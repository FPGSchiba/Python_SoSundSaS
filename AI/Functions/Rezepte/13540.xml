<?xml version="1.0" encoding="UTF-8"?>
<Rezept>
   <meta>
       <NaehrwertProPerson>200 kcal</NaehrwertProPerson>
       <Fett>14 g  </Fett>
       <Kohlenhydrate>11 g  </Kohlenhydrate>
       <Eiweiss>4 g   </Eiweiss>
   </meta>
   <einkaufliste>
      <Sauce     >
          <quant>100 g</quant>
          <zutat>gemischte Beeren (z.B. Erd- Heidel- und Himbeeren)</zutat>
          <quant>3 EL</quant>
          <zutat>Aceto balsamico bianco</zutat>
          <quant>3 EL</quant>
          <zutat>Olivenoel</zutat>
          <quant>2 TL</quant>
          <zutat>fluessiger Honig</zutat>
          <quant>1/4 TL</quant>
          <zutat>Salz</zutat>
          <quant>wenig </quant>
          <zutat>Pfeffer</zutat>
      </Sauce     >
      <Salat     >
          <quant>240 g</quant>
          <zutat>Blattsalat (z.B. Crisspy Mix)</zutat>
          <quant>200 g</quant>
          <zutat>gemischte Beeren (z.B. Erd-, Heidel- und Himbeeren), Erdbeeren in Schnitzen</zutat>
          <quant>einige </quant>
          <zutat>Pfefferminzblaetter</zutat>
          <quant>4 EL</quant>
          <zutat>Kernenmix, geroestet</zutat>
      </Salat     >
   </einkaufliste>
   <rezept>
      <Sauce     >
          <inhalt>Beeren mit allen Zutaten bis und mit Pfeffer puerieren.</inhalt>
      </Sauce     >
      <Salat     >
          <inhalt>Blattsalat und Beeren auf Tellern anrichten, Sauce daruebertraeufeln, Minze und Kerne darueberstreuen.</inhalt>
      </Salat     >
   </rezept>
</Rezept>